---
interface Props {
  kota: {
    nama: string;
    slug: string;
    provinsi: string;
    populasi: number;
    bisnisUtama: string[];
    keywords: string[];
    metaTitle: string;
    metaDescription: string;
    localBusiness: {
      address: string;
      phone: string;
      email: string;
    };
    areaCoverage: string[];
    competitors: string[];
    marketSize: string;
  };
}

const { kota } = Astro.props;

// Get all cities for related cities section
const allCities = await import('../data/kota-indonesia.json').then(m => m.default);
const relatedCities = allCities.filter(c => c.slug !== kota.slug && c.provinsi === kota.provinsi).slice(0, 6);
---

<!-- Hero Section -->
