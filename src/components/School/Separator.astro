---
interface Props {
  variant?: 'wave' | 'curve' | 'zigzag' | 'dots';
  color?: 'blue-yellow' | 'rainbow' | 'gradient';
}

const { variant = 'wave', color = 'blue-yellow' } = Astro.props;
---

<div class="separator-container">
  {variant === 'wave' && (
    <div class={`wave-separator ${color}`}>
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
      </svg>
    </div>
  )}
  
  {variant === 'curve' && (
    <div class={`curve-separator ${color}`}>
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
      </svg>
    </div>
  )}
  
  {variant === 'zigzag' && (
    <div class={`zigzag-separator ${color}`}>
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0L60,60L120,0L180,60L240,0L300,60L360,0L420,60L480,0L540,60L600,0L660,60L720,0L780,60L840,0L900,60L960,0L1020,60L1080,0L1140,60L1200,0V120H0Z"></path>
      </svg>
    </div>
  )}
  
  {variant === 'dots' && (
    <div class={`dots-separator ${color}`}>
      <div class="dots-container">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
      </div>
    </div>
  )}
</div>

<style>
  .separator-container {
    width: 100%;
    height: 120px;
    position: relative;
    overflow: hidden;
  }
  
  .wave-separator,
  .curve-separator,
  .zigzag-separator {
    width: 100%;
    height: 100%;
  }
  
  .wave-separator svg,
  .curve-separator svg,
  .zigzag-separator svg {
    width: 100%;
    height: 100%;
    display: block;
  }
  
  .shape-fill {
    fill: currentColor;
  }
  
  /* Color variants */
  .blue-yellow {
    color: #3B82F6;
  }
  
  .blue-yellow .shape-fill:nth-child(2) {
    color: #F59E0B;
  }
  
  .blue-yellow .shape-fill:nth-child(3) {
    color: #10B981;
  }
  
  .rainbow {
    color: #EF4444;
  }
  
  .rainbow .shape-fill:nth-child(2) {
    color: #F59E0B;
  }
  
  .rainbow .shape-fill:nth-child(3) {
    color: #10B981;
  }
  
  .gradient {
    background: linear-gradient(135deg, #3B82F6, #F59E0B, #10B981, #EF4444);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  /* Dots separator */
  .dots-separator {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .dots-container {
    display: flex;
    gap: 20px;
    align-items: center;
  }
  
  .dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    animation: bounce 2s infinite;
  }
  
  .dot:nth-child(1) { animation-delay: 0s; background: #3B82F6; }
  .dot:nth-child(2) { animation-delay: 0.2s; background: #F59E0B; }
  .dot:nth-child(3) { animation-delay: 0.4s; background: #10B981; }
  .dot:nth-child(4) { animation-delay: 0.6s; background: #EF4444; }
  .dot:nth-child(5) { animation-delay: 0.8s; background: #8B5CF6; }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-20px);
    }
    60% {
      transform: translateY(-10px);
    }
  }
  
  @media (max-width: 768px) {
    .separator-container {
      height: 80px;
    }
    
    .dots-container {
      gap: 15px;
    }
    
    .dot {
      width: 15px;
      height: 15px;
    }
  }
</style>