---
import SchoolLottieSeparator from '../SchoolLottieSeparator.astro';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`py-8 sm:py-12 lg:py-16 xl:py-20 px-4 sm:px-6 lg:px-8 ${className} section-bg-light dark:section-bg-dark relative overflow-hidden`}>
  <!-- Lightweight Floating Elements - Only on larger screens -->
  <div class="floating-elements">
    <div class="floating-shape"></div>
    <div class="floating-shape"></div>
    <div class="floating-shape"></div>
  </div>
  
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Content Section -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <!-- School Badge -->
        <div class="inline-flex items-center py-2 px-4 mb-6 sm:mb-7 text-sm text-gray-700 bg-gradient-to-r from-yellow-100/80 to-orange-100/80 dark:from-yellow-900/30 dark:to-orange-900/30 rounded-full dark:text-gray-300 hover:from-yellow-200/90 hover:to-orange-200/90 dark:hover:from-yellow-800/40 dark:hover:to-orange-800/40 transition-all duration-300 shadow-md backdrop-blur-sm max-w-sm sm:max-w-none mx-auto lg:mx-0" data-reveal="fade-right">
          <span class="text-xs bg-gradient-to-r from-blue-500/90 to-blue-600/90 rounded-full text-white px-3 py-1.5 mr-3 font-bold shadow-lg">üè´ Sekolah Unggulan</span>
          <span class="text-sm font-bold">SD Muhammadiyah 20 Surabaya</span>
        </div>
        
        <!-- Main Heading -->
        <h1 class="mb-4 text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-extrabold tracking-tight leading-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white" data-reveal="fade-up">
          <span class="bg-gradient-to-r from-blue-600 via-red-600 to-yellow-600 bg-clip-text text-transparent">Membangun Masa Depan</span>
          <br class="hidden sm:block" />
          <span class="text-gray-800 dark:text-gray-200">Cemerlang Bersama</span>
        </h1>
        
        <!-- Description -->
        <p class="mb-6 sm:mb-8 text-base sm:text-lg lg:text-xl text-gray-600 lg:text-xl dark:text-gray-300 max-w-2xl mx-auto lg:mx-0" data-reveal="fade-up" data-reveal-delay="200">
          SD Muhammadiyah 20 Surabaya hadir dengan pendidikan berkualitas yang mengintegrasikan nilai-nilai Islam, kurikulum nasional, dan teknologi modern untuk membentuk generasi unggul.
        </p>
        
        <!-- School Stats -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6 sm:mb-8" data-reveal="fade-up" data-reveal-delay="300">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-blue-600 dark:text-blue-400">25+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Tahun Pengalaman</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-red-600 dark:text-red-400">500+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Siswa Aktif</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-yellow-600 dark:text-yellow-400">30+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Guru Profesional</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-green-600 dark:text-green-400">15+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Ekstrakurikuler</div>
          </div>
        </div>
        
        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start" data-reveal="fade-up" data-reveal-delay="400">
          <a href="/contact" class="inline-flex justify-center items-center py-3 px-6 sm:px-8 text-sm sm:text-base font-bold text-center text-white rounded-lg school-btn-primary hover:scale-105 transition-all duration-200 shadow-lg w-full sm:w-auto">
            <span class="hidden sm:inline">Daftar Sekarang</span>
            <span class="sm:hidden">Daftar</span>
            <svg class="w-4 h-4 ml-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
          </a>
          <a href="https://wa.me/085799520350" class="inline-flex justify-center items-center py-3 px-6 sm:px-8 text-sm sm:text-base font-bold text-center text-white bg-gradient-to-r from-green-500/90 to-emerald-500/90 rounded-lg border border-green-400/50 hover:from-green-600/90 hover:to-emerald-600/90 focus:ring-4 focus:ring-green-300 dark:focus:ring-green-900 transition-all duration-200 shadow-lg hover:scale-105 w-full sm:w-auto">
            <span class="hidden sm:inline">WhatsApp Konsultasi</span>
            <span class="sm:hidden">WhatsApp</span>
            <svg class="w-4 h-4 ml-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
          </a>
        </div>
      </div>
      
      <!-- Image Section -->
      <div class="relative w-full order-1 lg:order-2" data-reveal="fade-left" data-reveal-delay="300">
        <div class="relative h-48 sm:h-56 md:h-64 lg:h-72 xl:h-80 overflow-hidden rounded-lg sm:rounded-xl border border-blue-200/50 dark:border-blue-700/50 shadow-2xl">
          <img src="https://res.cloudinary.com/dwxw1h9my/image/upload/f_auto,q_auto,w_auto,dpr_auto/v1753726244/kotacom/website-images/Web_Development_hero.jpg" class="w-full h-full object-cover" alt="SD Muhammadiyah 20 Surabaya" loading="eager" />
          
          <!-- School Logo Overlay -->
          <div class="absolute top-4 left-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-full p-2 shadow-lg">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center">
              <span class="text-white text-xl font-bold">M</span>
            </div>
          </div>
          
          <!-- Decorative elements -->
          <div class="absolute top-2 right-2 w-3 h-3 sm:w-4 sm:h-4 bg-yellow-400/80 rounded-full animate-ping"></div>
          <div class="absolute bottom-2 left-2 w-2 h-2 sm:w-3 sm:h-3 bg-red-400/80 rounded-full animate-pulse"></div>
          
          <!-- Floating achievement badges -->
          <div class="absolute top-1/4 right-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-lg px-3 py-2 shadow-lg transform rotate-12 hover:rotate-0 transition-transform duration-300">
            <div class="text-center">
              <div class="text-yellow-500 text-lg">üèÜ</div>
              <div class="text-xs font-bold text-gray-700 dark:text-gray-300">Sekolah</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">Unggulan</div>
            </div>
          </div>
          
          <div class="absolute bottom-1/4 left-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-lg px-3 py-2 shadow-lg transform -rotate-12 hover:rotate-0 transition-transform duration-300">
            <div class="text-center">
              <div class="text-blue-500 text-lg">‚≠ê</div>
              <div class="text-xs font-bold text-gray-700 dark:text-gray-300">Akreditasi</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">A</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Lottie Separator -->
  <SchoolLottieSeparator animation="school" height="h-16 sm:h-20" className="mt-6 sm:mt-8" />
</section>