---

<section class="py-20 bg-gradient-to-br from-blue-50 to-indigo-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Cerita Sukses Sekolah Kami
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Lebih dari 50+ sekolah telah mempercayai sistem digital dari kotacom.id
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-start space-x-4 mb-6">
            <div class="flex-shrink-0">
              <img
                src={testimonial.image || "https://images.unsplash.com/photo-1544717297-fa95b6ee9643?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80"}
                alt={testimonial.schoolName}
                class="w-16 h-16 rounded-full object-cover border-2 border-gray-200"
                loading="lazy"
              />
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">{testimonial.schoolName}</h3>
              <p class="text-sm text-gray-600">{testimonial.schoolType} â€¢ {testimonial.location}</p>
              <p class="text-sm text-blue-600 font-medium">{testimonial.principalName}</p>

              <div class="flex items-center mt-2">
                {[...Array(5)].map((_, i) => (
                  <svg
                    key={i}
                    class={`w-4 h-4 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
                <span class="ml-2 text-sm text-gray-600">{testimonial.rating}.0/5.0</span>
              </div>
            </div>
          </div>

          <blockquote class="text-gray-700 mb-6 leading-relaxed italic">
            "{testimonial.testimonial}"
          </blockquote>

          <div class="border-t pt-6">
            <h4 class="font-semibold text-gray-900 mb-3">Manfaat yang Diraskan:</h4>
            <ul class="grid grid-cols-1 gap-2">
              {testimonial.benefits.map((benefit) => (
                <li class="flex items-center text-sm text-gray-700">
                  <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>

          <div class="mt-6 pt-6 border-t">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Paket:</span>
              <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">
                {testimonial.packageUsed}
              </span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Statistics Section -->
    <div class="mt-20 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white">
      <div class="text-center mb-8">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">Pencapaian Kami</h3>
        <p class="text-blue-100">Angka-angka yang membuktikan kepercayaan sekolah terhadap sistem kami</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold mb-2">50+</div>
          <div class="text-blue-100 text-sm">Sekolah Terintegrasi</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold mb-2">15.000+</div>
          <div class="text-blue-100 text-sm">Siswa Terdaftar</div>
