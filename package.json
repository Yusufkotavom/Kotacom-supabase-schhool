    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.16.6",
    "astro-pagefind": "^1.8.3",
    "axios": "^1.10.0",
    "flowbite": "^3.1.2",
    "fs-extra": "^11.3.0",
