---
import type { CollectionEntry } from "astro:content";
import MainLayout from "./MainLayout.astro";
import ResponsiveImage from "../components/ResponsiveImage.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import RelatedList from "../components/RelatedList.astro";
import { COMPANY_NAME } from "../consts";
import "../styles/content.css";
import { toSlug } from '../utils/slug-helpers';
import WhatsAppButton from "../components/WhatsAppButton.astro";
import { getCollection } from 'astro:content';
import { getPostsDirectFromSupabase, convertSupabasePost } from "../lib/supabase-direct";

// Props untuk semua jenis post
type Props = {
	// New Payload/Direct props
	title?: string;
	description?: string;
	imageUrl?: string;
	coverImage?: string;
	image?: string;
	published?: Date;
	publishedAt?: Date;
	updated?: Date;
	lastUpdated?: Date;
	tags?: string[] | Array<{value: string}>;
	category?: string[] | Array<{value: string}>;
	author?: string;
	source?: 'directus' | 'notion' | 'mdx' | 'sanity' | 'payload' | 'supabase' | 'page' | 'unknown';
	wordCount?: number;
	content?: string;
	body?: string;
	slug?: string;
	// Legacy props untuk backward compatibility
	properties?: any;
};

const props = Astro.props as any;

// Helper function to process tags/categories
const processTags = (tags: any): string[] => {
	if (!tags) return [];
	if (Array.isArray(tags)) {
		return tags.map(tag => {
			if (typeof tag === 'string') return tag;
			if (tag && typeof tag === 'object' && tag.value) return tag.value;
			return String(tag);
		}).filter(Boolean);
	}
	return [];
};

// Normalize data untuk semua jenis post
let postData: {
	title: string;
	description: string;
	image: string;
	published: Date | string;
	updated: Date | string;
	tags: string[];
	author: string;
	source: string;
	slug?: string;
	content?: string;
};

// New Payload schema (direct properties)
if (props.title && !props.properties) {
	postData = {
		title: props.title,
		description: props.description || '',
		image: props.imageUrl || props.coverImage || props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || props.publishedAt || new Date(),
		updated: props.updated || props.lastUpdated || props.published || props.publishedAt || new Date(),
		tags: [...processTags(props.tags), ...processTags(props.category)] as string[],
		author: props.author || COMPANY_NAME,
		source: props.source || 'payload',
		slug: props.slug,
		content: props.content || props.body
	};
} else if (props.source === 'directus' || props.source === 'sanity') {
	// Directus/Sanity post structure
	postData = {
		title: props.title || 'Untitled',
		description: props.description || '',
		image: props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || new Date(),
		updated: props.updated || new Date(),
		tags: processTags(props.tags),
		author: props.author || COMPANY_NAME,
		source: props.source || 'sanity'
	};
} else if (props.properties) {
	// Legacy Notion/MDX structure
	const properties = props.properties;
	postData = {
		title: properties.bTitle || properties.title || 'Untitled',
		description: properties.bDescription || properties.description || '',
		image: properties.bCoverImage || properties.coverImage || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: properties.bPublished?.start || properties.published || new Date(),
		updated: properties.bLastUpdated?.start || properties.lastUpdated || new Date(),
		tags: Array.isArray(properties.bTags) ? properties.bTags.filter(Boolean) : (properties.bTags ? [properties.bTags] : []),
		author: COMPANY_NAME,
		source: props.source || 'notion',
		slug: properties.bSlug || properties.slug
	};
} else {
	// Fallback
	postData = {
		title: props.title || 'Untitled',
		description: props.description || '',
		image: props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || new Date(),
		updated: props.updated || new Date(),
		tags: processTags(props.tags),
		author: props.author || COMPANY_NAME,
		source: props.source || 'unknown'
	};
}

const title = postData.title;
const description = postData.description || `Artikel tentang ${postData.title} dari ${COMPANY_NAME}`;
const image = postData.image;

// Parse date safely
const publishedDate = postData.published instanceof Date 
	? postData.published.toISOString()
	: new Date(postData.published).toISOString();

const modifiedDate = postData.updated instanceof Date 
	? postData.updated.toISOString()
	: new Date(postData.updated).toISOString();

// Breadcrumbs for schema - updated for root level posts
const breadcrumbs = [
	{ name: "Home", url: "/" },
	{ name: postData.title, url: Astro.url.toString() }
];

// Reading time (approx)
const readingTimeMinutes = props.wordCount ? Math.ceil(props.wordCount / 200) : null;

// Hitung 10 kategori/tag terbanyak dari MDX + Supabase posts
let topCategories: Array<{ name: string; count: number }> = [];
try {
	const counts: Record<string, number> = {};
	// MDX
	const mdxPosts: any[] = await getCollection('postsMdx').catch(() => []);
	for (const p of mdxPosts) {
		const rawCats = p.data?.category || [];
		const rawTags = p.data?.tags || [];
		const cats = Array.isArray(rawCats) ? rawCats : [rawCats];
		const tags = Array.isArray(rawTags) ? rawTags : [rawTags];
		const combined = [...cats, ...tags].filter(Boolean);
		for (const t of combined) {
			const name = typeof t === 'object' && (t as any)?.value ? String((t as any).value) : String(t || '');
			if (!name) continue;
			counts[name] = (counts[name] || 0) + 1;
		}
	}
	// Supabase (published only)
	const supabasePostsRaw: any[] = await getPostsDirectFromSupabase(1000, 'published').catch(() => []);
	const supabasePosts = (supabasePostsRaw || []).map((p: any) => convertSupabasePost(p));
	for (const p of supabasePosts) {
		const rawCats = (p as any)?.category || [];
		const rawTags = (p as any)?.tags || [];
		const cats = Array.isArray(rawCats) ? rawCats : [rawCats];
		const tags = Array.isArray(rawTags) ? rawTags : [rawTags];
		const combined = [...cats, ...tags].filter(Boolean);
		for (const t of combined) {
			const name = typeof t === 'object' && (t as any)?.value ? String((t as any).value) : String(t || '');
			if (!name) continue;
			counts[name] = (counts[name] || 0) + 1;
		}
	}
	topCategories = Object.entries(counts)
		.map(([name, count]) => ({ name, count }))
		.sort((a, b) => b.count - a.count)
		.slice(0, 10);
} catch {}
---

<MainLayout title={title} description={description} image={image} type="article" published={publishedDate} modified={modifiedDate} section={postData.tags?.[0]} tags={postData.tags}>
	<SchemaMarkup
		type="article"
		title={postData.title}
		description={description}
		image={image}
		breadcrumbs={breadcrumbs}
		author={postData.author}
		datePublished={publishedDate}
		dateModified={modifiedDate}
		tags={postData.tags}
		category={postData.tags}
		data={{ wordCount: props.wordCount }}
	/>

	<!-- Minimal Header -->
	<section class="bg-white dark:bg-gray-900">
		<div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-10">
			<div class="space-y-4">
				<h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white" data-pagefind-meta="title">{postData.title}</h1>
				{postData.description && (
					<p class="text-gray-600 dark:text-gray-300 text-base sm:text-lg">{postData.description}</p>
				)}
				<div class="flex flex-wrap items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
					<time datetime={publishedDate} class="inline-flex items-center gap-1">
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" /></svg>
						{new Date(publishedDate).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
					</time>
					{postData.tags?.length > 0 && (
						<div class="flex flex-wrap gap-2">
							{postData.tags.slice(0,4).map((tag: string) => (
								<a href={`/category/${toSlug(tag)}/`} class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">{tag}</a>
							))}
						</div>
					)}
				</div>
				{image && (
					<div class="mt-4">
						<ResponsiveImage
							src={image}
							alt={postData.title}
							class="rounded-lg w-full object-cover"
							loading="eager"
							fetchpriority="high"
							data-pagefind-meta="image[src], image_alt[alt]"
						/>
					</div>
				)}
			</div>
		</div>
	</section>

	<!-- Content + CTA Sidebar -->
	<section class="bg-gray-50 dark:bg-gray-800">
		<div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
				<!-- Article -->
				<article id="post-article" class="lg:col-span-2 prose md:prose-lg max-w-none" data-pagefind-body data-pagefind-filter={props.source === 'page' ? undefined : 'type:post'}>
					<slot />
					{postData.tags?.length > 0 && (
						<span class="hidden" data-pagefind-meta="categories">{postData.tags.join(', ')}</span>
					)}
				</article>

				<!-- Sidebar CTA + Popular Categories -->
				<aside class="lg:col-span-1 space-y-6 lg:sticky lg:top-24">
					<div class="p-5 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-900 dark:border-gray-700">
						<h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Butuh Bantuan?</h2>
						<p class="text-sm text-gray-600 dark:text-gray-300 mb-4">Konsultasi gratis untuk kebutuhan website, software, atau layanan IT Anda.</p>
						<WhatsAppButton 
							placement="post_sidebar_cta"
							whatsappMessage={`Halo! Saya membaca artikel ${postData.title}. Bisa konsultasi tentang layanan yang sesuai? {url}`}
							className="w-full justify-center"
						/>
					</div>

					{topCategories.length > 0 && (
						<div class="p-5 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-900 dark:border-gray-700">
							<h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Kategori Populer</h3>
							<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
								{topCategories.map((c) => (
									<li class="flex items-center justify-between">
										<a class="hover:underline" href={`/category/${toSlug(c.name)}/`}>{c.name}</a>
										<span class="text-xs text-gray-500 dark:text-gray-400">{c.count}</span>
									</li>
								))}
							</ul>
						</div>
					)}

					<div class="p-5 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-900 dark:border-gray-700">
						<h3 class="text-base font-semibold text-gray-900 dark:text-white mb-2">Layanan Populer</h3>
						<ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
							<li><a class="hover:underline" href="/services/website-software-development-terbaik/">Website & Software Development</a></li>
							<li><a class="hover:underline" href="/services/it-support/">IT Support & Maintenance</a></li>
						</ul>
					</div>
				</aside>
			</div>
		</div>
	</section>

	<!-- Bottom CTA -->
	<section class="bg-white dark:bg-gray-900">
		<div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 py-10">
			<div class="flex flex-col md:flex-row items-center justify-between gap-4 p-5 border border-gray-200 rounded-lg shadow-sm dark:border-gray-700">
				<div>
					<h2 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white">Konsultasi Gratis dengan Tim Kami</h2>
					<p class="text-sm text-gray-600 dark:text-gray-300">Diskusikan kebutuhan Anda dan dapatkan solusi terbaik untuk bisnis.</p>
				</div>
				<WhatsAppButton 
					placement="post_bottom_cta"
					whatsappMessage={`Halo! Saya tertarik konsultasi setelah baca artikel ${postData.title}. {url}`}
					className="px-5 py-3"
				/>
			</div>
		</div>
	</section>

	<!-- Related Articles (konsisten minimal) -->
	<RelatedList type="post" limit={5} />

	<script is:inline>
		(function(){
			function slugify(text){
				return (text||'').toString().toLowerCase().trim()
					.replace(/[^\w\s-]/g,'')
					.replace(/\s+/g,'-');
			}
			document.addEventListener('DOMContentLoaded', function(){
				const article = document.getElementById('post-article');
				if(!article) return;
				const headers = Array.from(article.querySelectorAll('h2'));
				if(headers.length === 0) return;
				// Build TOC container
				const toc = document.createElement('div');
				toc.className = 'my-4 p-3 bg-white border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700';
				const title = document.createElement('div');
				title.textContent = 'Daftar Isi';
				title.className = 'text-xs font-semibold text-gray-900 dark:text-white mb-2';
				const ul = document.createElement('ul');
				ul.className = 'space-y-1 text-xs leading-tight text-gray-700 dark:text-gray-300';
				headers.forEach((h) => {
					const text = h.textContent || '';
					let id = h.getAttribute('id');
					if(!id){ id = slugify(text); h.setAttribute('id', id); }
					const li = document.createElement('li');
					li.className = 'list-none';
					const a = document.createElement('a');
					a.href = `#${id}`;
					a.textContent = text;
					a.className = 'text-xs text-gray-700 hover:underline dark:text-gray-300';
					li.appendChild(a);
					ul.appendChild(li);
				});
				toc.appendChild(title);
				toc.appendChild(ul);
				// Insert after first paragraph
				const firstP = article.querySelector('p');
				if(firstP && firstP.parentNode){
					firstP.parentNode.insertBefore(toc, firstP.nextSibling);
				}
			});
		})();
	</script>
</MainLayout>