---
import type { CollectionEntry } from "astro:content";
import MainLayout from "./MainLayout.astro";
import ResponsiveImage from "../components/ResponsiveImage.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import RelatedList from "../components/RelatedList.astro";
import { COMPANY_NAME } from "../consts";
import "../styles/content.css";

// Props untuk semua jenis post
type Props = {
	// New Payload/Direct props
	title?: string;
	description?: string;
	imageUrl?: string;
	coverImage?: string;
	image?: string;
	published?: Date;
	publishedAt?: Date;
	updated?: Date;
	lastUpdated?: Date;
	tags?: string[] | Array<{value: string}>;
	category?: string[] | Array<{value: string}>;
	author?: string;
	source?: 'directus' | 'notion' | 'mdx' | 'sanity' | 'payload';
	wordCount?: number;
	content?: string;
	body?: string;
	slug?: string;
	
	// Legacy props untuk backward compatibility
	properties?: any;
};

const props = Astro.props;

// Helper function to process tags/categories
const processTags = (tags: any): string[] => {
	if (!tags) return [];
	if (Array.isArray(tags)) {
		return tags.map(tag => {
			if (typeof tag === 'string') return tag;
			if (tag && tag.value) return tag.value;
			return String(tag);
		}).filter(Boolean);
	}
	return [];
};

// Normalize data untuk semua jenis post
let postData: {
	title: string;
	description: string;
	image: string;
	published: Date;
	updated: Date;
	tags: string[];
	author: string;
	source: string;
	slug?: string;
	content?: string;
};

// New Payload schema (direct properties)
if (props.title && !props.properties) {
	postData = {
		title: props.title,
		description: props.description || '',
		image: props.imageUrl || props.coverImage || props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || props.publishedAt || new Date(),
		updated: props.updated || props.lastUpdated || props.published || props.publishedAt || new Date(),
		tags: [...processTags(props.tags), ...processTags(props.category)],
		author: props.author || COMPANY_NAME,
		source: props.source || 'payload',
		slug: props.slug,
		content: props.content || props.body
	};
} else if (props.source === 'directus' || props.source === 'sanity') {
	// Directus/Sanity post structure
	postData = {
		title: props.title || 'Untitled',
		description: props.description || '',
		image: props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || new Date(),
		updated: props.updated || new Date(),
		tags: props.tags || [],
		author: props.author || COMPANY_NAME,
		source: props.source || 'sanity'
	};
} else if (props.properties) {
	// Legacy Notion/MDX structure
	const properties = props.properties;
	postData = {
		title: properties.bTitle || properties.title || 'Untitled',
		description: properties.bDescription || properties.description || '',
		image: properties.bCoverImage || properties.coverImage || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: properties.bPublished?.start || properties.published || new Date(),
		updated: properties.bLastUpdated?.start || properties.lastUpdated || new Date(),
		tags: Array.isArray(properties.bTags) ? properties.bTags.filter(Boolean) : (properties.bTags ? [properties.bTags] : []),
		author: COMPANY_NAME,
		source: props.source || 'notion',
		slug: properties.bSlug || properties.slug
	};
} else {
	// Fallback
	postData = {
		title: props.title || 'Untitled',
		description: props.description || '',
		image: props.image || 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png',
		published: props.published || new Date(),
		updated: props.updated || new Date(),
		tags: props.tags || [],
		author: props.author || COMPANY_NAME,
		source: props.source || 'unknown'
	};
}

const title = postData.title;
const description = postData.description || `Artikel tentang ${postData.title} dari ${COMPANY_NAME}`;
const image = postData.image;

// Parse date safely
const publishedDate = postData.published instanceof Date 
	? postData.published.toISOString()
	: new Date(postData.published).toISOString();

const modifiedDate = postData.updated instanceof Date 
	? postData.updated.toISOString()
	: new Date(postData.updated).toISOString();

// Breadcrumbs for schema - updated for root level posts
const breadcrumbs = [
	{ name: "Home", url: "/" },
	{ name: postData.title, url: Astro.url.toString() }
];

// Share links & reading time
const shareUrl = Astro.url.toString();
const shareText = postData.title;
const twitterHref = `https://twitter.com/intent/tweet?url=${encodeURIComponent(shareUrl)}&text=${encodeURIComponent(shareText)}`;
const facebookHref = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`;
const whatsappHref = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;
const readingTimeMinutes = props.wordCount ? Math.ceil(props.wordCount / 200) : null;
---

<MainLayout title={title} description={description} image={image} type="article" published={publishedDate} modified={modifiedDate} section={postData.tags?.[0]} tags={postData.tags}>
	<SchemaMarkup
		type="article"
		title={postData.title}
		description={description}
		image={image}
		breadcrumbs={breadcrumbs}
		author={postData.author}
		datePublished={publishedDate}
		dateModified={modifiedDate}
		tags={postData.tags}
		category={postData.tags}
		data={{ wordCount: props.wordCount }}
	/>

	<!-- Breadcrumbs -->
	<section class="bg-gray-50 dark:bg-gray-800 py-4">
		<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
			<nav class="flex" aria-label="Breadcrumb">
				<ol class="inline-flex items-center space-x-1 md:space-x-3">
					<li class="inline-flex items-center">
						<a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
							<svg class="w-3 h-3 mr-2.5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
								<path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
							</svg>
							Home
						</a>
					</li>
					<li>
						<div class="flex items-center">
							<svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
							</svg>
							<a href="/blog" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">Blog</a>
						</div>
					</li>
					<li aria-current="page">
						<div class="flex items-center">
							<svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
							</svg>
							<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">{postData.title}</span>
						</div>
					</li>
				</ol>
			</nav>
		</div>
	</section>

	<!-- Modern Hero with Gradient Background -->
	<section class="relative bg-gradient-to-br from-blue-600 via-purple-600 to-pink-500 dark:from-blue-800 dark:via-purple-800 dark:to-pink-700 overflow-hidden">
		<!-- Background Pattern -->
		<div class="absolute inset-0 bg-gradient-to-r from-blue-600/90 via-purple-600/90 to-pink-500/90 dark:from-blue-800/90 dark:via-purple-800/90 dark:to-pink-700/90"></div>
		<div class="absolute inset-0 bg-white/5 opacity-30 bg-gradient-to-br from-transparent via-white/10 to-transparent"></div>
		
		<div class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
				<!-- Content -->
				<div class="order-2 lg:order-1 space-y-6">
					{postData.tags?.length > 0 && (
						<div class="flex flex-wrap gap-2">
							{postData.tags.map((tag: string) => (
								<a href={`/category/${tag.toLowerCase().replace(/\s+/g, '-')}/`} 
								   class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold text-white bg-white/20 backdrop-blur-sm border border-white/30 hover:bg-white/30 transition-all duration-200 transform hover:scale-105 hover:shadow-lg">
									<span class="drop-shadow-sm">{tag}</span>
								</a>
							))}
						</div>
					)}
					
					<h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight drop-shadow-lg" data-pagefind-meta="title">
						{postData.title}
					</h1>
					
					{postData.description && (
						<p class="text-lg sm:text-xl text-white/90 leading-relaxed drop-shadow-sm max-w-2xl">{postData.description}</p>
					)}
					
					<!-- Meta Info -->
					<div class="flex flex-wrap items-center gap-4 text-sm text-white/80">
						<div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full">
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
							</svg>
							<time datetime={publishedDate}>
								{new Date(publishedDate).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
							</time>
						</div>
						{readingTimeMinutes && (
							<div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
								</svg>
								{readingTimeMinutes} menit baca
							</div>
						)}
						{props.wordCount && (
							<div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-3 py-1.5 rounded-full">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
								</svg>
								{props.wordCount} kata
							</div>
						)}
					</div>
					
					<!-- Author & Social Share -->
					<div class="flex flex-col sm:flex-row sm:items-center gap-4">
						<div class="flex items-center gap-3 text-white/90">
							<div class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
								</svg>
							</div>
							<span class="font-medium drop-shadow-sm">{postData.author}</span>
						</div>
						
						<div class="flex flex-wrap items-center gap-2">
							<a href={twitterHref} target="_blank" rel="noopener" 
							   class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-white/10 backdrop-blur-sm text-white border border-white/20 hover:bg-white/20 transition-all duration-200 transform hover:scale-105">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
								Twitter
							</a>
							<a href={facebookHref} target="_blank" rel="noopener" 
							   class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-white/10 backdrop-blur-sm text-white border border-white/20 hover:bg-white/20 transition-all duration-200 transform hover:scale-105">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
								Facebook
							</a>
							<a href={whatsappHref} target="_blank" rel="noopener" 
							   class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-green-500/80 backdrop-blur-sm text-white border border-green-400/30 hover:bg-green-500 transition-all duration-200 transform hover:scale-105">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/></svg>
								WhatsApp
							</a>
							<button onclick="window.print()" 
							        class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium bg-white/10 backdrop-blur-sm text-white border border-white/20 hover:bg-white/20 transition-all duration-200 transform hover:scale-105">
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zM5 9a1 1 0 011-1h8a1 1 0 011 1v1H5V9z" clip-rule="evenodd" />
								</svg>
								Cetak
							</button>
						</div>
					</div>
				</div>
				
				<!-- Featured Image -->
				<div class="order-1 lg:order-2">
					<div class="relative group">
						<!-- Glass morphism container -->
						<div class="absolute inset-0 bg-white/10 backdrop-blur-sm rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform duration-300"></div>
						<div class="relative bg-white/20 backdrop-blur-sm p-2 rounded-2xl border border-white/30 shadow-2xl">
							<ResponsiveImage
								src={postData.image}
								alt={postData.title}
								class="rounded-xl w-full object-cover shadow-lg"
								loading="eager"
								fetchpriority="high"
								data-pagefind-meta="image[src], image_alt[alt]"
							/>
						</div>
						<!-- Floating elements -->
						<div class="absolute -top-4 -right-4 w-8 h-8 bg-yellow-400 rounded-full animate-pulse opacity-80"></div>
						<div class="absolute -bottom-6 -left-6 w-12 h-12 bg-pink-400 rounded-full animate-pulse opacity-60"></div>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Wave divider -->
		<div class="absolute bottom-0 left-0 right-0">
			<svg class="w-full h-8 sm:h-12 text-gray-50 dark:text-gray-800" viewBox="0 0 1000 100" fill="currentColor" preserveAspectRatio="none">
				<path d="M1000,4.3V0H0v4.3C0.9,23.1,126.7,99.2,500,99.2S999.1,23.1,1000,4.3z"></path>
			</svg>
		</div>
	</section>

	<!-- Content Section -->
	<section class="bg-gray-50 dark:bg-gray-800">
		<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
							<article class="prose prose-lg max-w-none" data-pagefind-body data-pagefind-filter={props.source === 'page' ? undefined : 'type:post'}>
				<slot />
				{postData.tags?.length > 0 && (
					<span class="hidden" data-pagefind-meta="categories">{postData.tags.join(', ')}</span>
				)}
			</article>
		</div>
	</section>

	<!-- Author / Meta Footer -->
	<section class="bg-white dark:bg-gray-900">
		<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 border-t border-gray-200 dark:border-gray-700 pt-6">
				<div class="text-sm text-gray-600 dark:text-gray-400">
					<p>Ditulis oleh <span class="font-medium text-gray-900 dark:text-white">{postData.author}</span></p>
					<p>Terakhir diperbarui: {new Date(modifiedDate).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
				</div>
				<div class="flex items-center gap-2">
					<a href={twitterHref} target="_blank" rel="noopener" class="px-3 py-2 text-sm rounded-lg bg-blue-50 text-blue-700 hover:bg-blue-100 dark:bg-blue-900/20 dark:text-blue-300">Bagikan</a>
					<button onclick="window.print()" class="px-3 py-2 text-sm rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">Cetak</button>
				</div>
			</div>
		</div>
	</section>

	<!-- Related Articles -->
	<RelatedList type="post" limit={5} />
</MainLayout>