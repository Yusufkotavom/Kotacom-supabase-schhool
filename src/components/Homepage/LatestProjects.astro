---
// Latest Projects section for homepage

import { getCollection } from "astro:content";
import ProjectCard from "../ProjectCard.astro";
import PCategoryDropdown from "../PCategoryDropdown.astro";
import SchoolLottieSeparator from "../SchoolLottieSeparator.astro";
import { getProjectsDirectFromSupabase, convertSupabaseProject } from "../../lib/supabase-direct";

// Props: limit specifies the number of projects to display
interface Props {
  limit: number;
}

const { limit } = Astro.props;

// Fetch from MD and Supabase Direct (much faster!)
let mdxProjects = [] as any[];
try { mdxProjects = await getCollection("projectsMdx"); } catch {}
const supabaseProjects = await getProjectsDirectFromSupabase(1000, 'published'); // Only published projects

// Normalize MDX projects
const normalizedMdxProjects = mdxProjects.map((entry) => ({
  ...entry,
  source: 'mdx',
  data: {
    ...entry.data,
    properties: {
      pTitle: entry.data.title,
      pCountry: entry.data.country,
      pLocale: entry.data.locale,
      pSlug: entry.data.slug,
      pImageURL: entry.data.imageUrl || "",
      pPublished: { start: entry.data.published },
      pDescription: entry.data.description,
      pVerify: entry.data.verify || "",
      pOrganiser: entry.data.organiser || "",
    },
  },
}));

// Normalize Supabase projects
const normalizedSupabase = supabaseProjects.map((p: any) => ({
  source: 'supabase',
  data: { properties: {
    pTitle: p.title,
    pCountry: (p.country||[]).map((x:any)=>x.value||x),
    pLocale: (p.locale||[]).map((x:any)=>x.value||x),
    pSlug: p.slug,
    pImageURL: p.imageUrl || p.cover_image || "",
    pPublished: { start: p.published ? new Date(p.published) : new Date(0) },
    pDescription: p.description,
    pVerify: p.verify || "",
    pOrganiser: p.organiser || "",
  } }
}));

// Merge
const allProjects = [...normalizedMdxProjects, ...normalizedSupabase];

// Sort by pPublished date (descending)
const sortedEntries = allProjects.sort((a, b) => {
  const dateA = a.data.properties.pPublished?.start || new Date(0);
  const dateB = b.data.properties.pPublished?.start || new Date(0);
  return dateB.getTime() - dateA.getTime();
});

// Limit
const limitedEntries = sortedEntries.slice(0, limit);

// Debug info
console.log(`LatestProjects: Found ${mdxProjects.length} MD projects, supabase ${supabaseProjects.length}, showing ${limitedEntries.length} total`);
---

<section class="bg-gradient-to-br from-red-50 via-white to-yellow-50 dark:from-red-900/20 dark:via-gray-900 dark:to-yellow-900/20">
  <!-- Lottie Separator -->
  <SchoolLottieSeparator animation="pencil" height="h-16" className="pt-8" />
  
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="flex flex-col items-start justify-between p-2 space-y-3 md:flex-row md:space-y-0 mb-4">
      <div class="max-w-screen-md">
        <h2
          class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
        >
          Portfolio Proyek Terbaru
        </h2>
        <p class="text-gray-500 sm:text-xl dark:text-gray-400">
          Showcase proyek IT terkini yang telah berhasil kami kerjakan untuk berbagai klien dan industri.
        </p>
      </div>
      <div
        id="3"
        class="w-full md:w-1/4 p-2 order-2 md:order-3"
      >
        <PCategoryDropdown />
      </div>
    </div>
    <div
      class="flex flex-row overflow-x-auto hide-scrollbar space-x-4 md:space-x-0 md:space-y-0 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12"
    >
      {limitedEntries.map((project) => (
        <div class="w-[70%] sm:w-[50%] md:w-auto flex-shrink-0 md:flex-shrink">
          <ProjectCard project={project} />
        </div>
      ))}
    </div>
  </div>
</section>
