      <p class="text-xl text-gray-600 dark:text-gray-300">
        Get answers to common questions about our school and programs
      </p>
    </div>
    
    <!-- FAQ Items -->
    <div class="space-y-6">
      {faqs.map((faq, index) => (
        <div 
          class="bg-white/80 dark:bg-gray-800/80 rounded-xl shadow-lg border border-gray-200/50 dark:border-gray-700/50 overflow-hidden backdrop-blur-sm"
