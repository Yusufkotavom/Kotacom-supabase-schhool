{
  "name": "kotacom-site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run redirects:vercel && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "optimize-images": "node optimize-images.js",
    "build:optimized": "npm run optimize-images && npm run build",
    "analyze": "npm run build && open dist/stats.html",
    "performance": "npm run build && lighthouse dist/ --output html --output-path ./lighthouse-report.html",
    "lint": "eslint . --ext .ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .ts,.tsx,.astro --fix",
    "redirects:vercel": "node scripts/generate-vercel-redirects.js"
  },
