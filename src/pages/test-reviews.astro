---
import MainLayout from "../layouts/MainLayout.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import { getReviewsForService, getRandomReviews } from "../data/mockReviews";

// Test different service types
const websiteReviews = getRandomReviews(getReviewsForService('website'), 10);
const softwareReviews = getRandomReviews(getReviewsForService('software'), 10);
const seoReviews = getRandomReviews(getReviewsForService('seo'), 10);
---

<MainLayout
  title="Test Mock Reviews - KOTACOM"
  description="Testing mock reviews implementation for Schema Markup"
>

<!-- Hero Section -->
<section class="py-20 bg-gradient-to-br from-blue-600 to-purple-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6">
      üèÜ Mock Reviews Test Page
    </h1>
    <p class="text-xl mb-8 text-blue-100">
      Testing implementation of 200-500 mock reviews with 4.8-5.0 star ratings
    </p>
  </div>
</section>

<!-- Reviews Display -->
<section class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Website Reviews -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">
        üåê Website Service Reviews
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {websiteReviews.map((review, index) => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({length: Math.floor(review.rating)}).map(() => (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <span class="ml-2 text-gray-600 dark:text-gray-400">{review.rating}/5.0</span>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-4 italic">"{review.reviewBody}"</p>
            <div class="flex items-center justify-between text-sm">
              <span class="font-semibold text-gray-900 dark:text-white">{review.author}</span>
              <span class="text-gray-500">{new Date(review.datePublished).toLocaleDateString('id-ID')}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Software Reviews -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">
        üíª Software Service Reviews
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {softwareReviews.map((review, index) => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({length: Math.floor(review.rating)}).map(() => (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <span class="ml-2 text-gray-600 dark:text-gray-400">{review.rating}/5.0</span>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-4 italic">"{review.reviewBody}"</p>
            <div class="flex items-center justify-between text-sm">
              <span class="font-semibold text-gray-900 dark:text-white">{review.author}</span>
              <span class="text-gray-500">{new Date(review.datePublished).toLocaleDateString('id-ID')}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- SEO Reviews -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8 text-gray-900 dark:text-white">
        üîç SEO Service Reviews
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoReviews.map((review, index) => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({length: Math.floor(review.rating)}).map(() => (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <span class="ml-2 text-gray-600 dark:text-gray-400">{review.rating}/5.0</span>
            </div>
            <p class="text-gray-700 dark:text-gray-300 mb-4 italic">"{review.reviewBody}"</p>
            <div class="flex items-center justify-between text-sm">
              <span class="font-semibold text-gray-900 dark:text-white">{review.author}</span>
              <span class="text-gray-500">{new Date(review.datePublished).toLocaleDateString('id-ID')}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Statistics -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8 rounded-2xl text-center">
      <h3 class="text-2xl font-bold mb-6">üìä Mock Reviews Statistics</h3>
      <div class="grid md:grid-cols-4 gap-6">
        <div>
          <div class="text-3xl font-bold mb-2">200-500</div>
          <div class="text-blue-100">Total Reviews Generated</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-2">4.8-5.0</div>
          <div class="text-blue-100">Rating Range</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-2">50+</div>
          <div class="text-blue-100">Indonesian Names</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-2">2 Years</div>
          <div class="text-blue-100">Review Date Range</div>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- Schema Markup Test -->
<SchemaMarkup
  type="page"
  title="Test Mock Reviews - KOTACOM"
  description="Testing implementation of mock reviews system for Schema Markup"
  tags={["test", "mock reviews", "schema markup"]}
/>

</MainLayout>
