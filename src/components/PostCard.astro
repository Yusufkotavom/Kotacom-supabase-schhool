---
import ResponsiveImage from './ResponsiveImage.astro';
import { toSlug } from '../utils/slug-helpers';

interface Props {
  post: any; // Support both old and new schemas
}

const { post } = Astro.props;

// Modern schema mapping function
const getPostData = (post: any) => {
  // New Payload schema (direct properties)
  if (post.title && post.slug) {
    return {
      title: post.title,
      slug: post.slug,
      imageUrl: post.imageUrl || post.coverImage,
      tags: post.tags || post.category || [],
      description: post.description || '',
      published: post.published || post.publishedAt,
      source: post.source || 'supabase'
    };
  }
  
  // Old schema (nested properties)
  if (post.data?.properties) {
    return {
      title: post.data.properties.bTitle,
      slug: post.data.properties.bSlug,
      imageUrl: post.data.properties.bCoverImage,
      tags: post.data.properties.bTags || [],
      description: post.data.properties.bDescription || '',
      published: post.data.properties.bPublished,
      source: post.source || 'legacy'
    };
  }
  
  // Fallback
  return {
    title: post.title || 'Untitled',
    slug: post.slug || '#',
    imageUrl: post.imageUrl || '',
    tags: [],
    description: '',
    published: null,
    source: 'unknown'
  };
};

// Safe tag processing function
const getTagValue = (tag: any): string => {
  if (typeof tag === 'string') return tag;
  if (tag && typeof tag === 'object' && tag.value) return tag.value;
  return String(tag || '');
};

const postData = getPostData(post);

// Modern URL routing
const getPostUrl = (slug: string, source: string) => {
  // All posts use root-level routing now
  return `/${slug}/`;
};

const postUrl = getPostUrl(postData.slug, postData.source);

// Random gradient colors for modern look
const gradients = [
  'from-purple-600 via-blue-600 to-blue-700',
  'from-pink-500 via-red-500 to-yellow-500', 
  'from-green-400 via-blue-500 to-purple-600',
  'from-yellow-400 via-red-500 to-pink-500',
  'from-indigo-500 via-purple-500 to-pink-500',
  'from-blue-500 via-teal-500 to-green-500',
  'from-rose-400 via-fuchsia-500 to-indigo-500',
  'from-orange-400 via-red-400 to-pink-400'
];

const randomGradient = gradients[Math.floor(Math.random() * gradients.length)];
---

<article class="group relative school-card rounded-xl overflow-hidden shadow-lg hover:shadow-xl dark:shadow-gray-900/50 transition-all duration-300 transform hover:-translate-y-2">
  <!-- Gradient Overlay Background -->
  <div class={`absolute inset-0 bg-gradient-to-br ${randomGradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
  
  <!-- Image Container -->
  <div class="relative overflow-hidden">
    <a href={postUrl} class="block">
      <ResponsiveImage
        class="w-full h-48 md:h-52 lg:h-56 object-cover transition-transform duration-300 group-hover:scale-105"
        src={postData.imageUrl}
        alt={postData.title}
        preset="card"
        fallbackWidth={600}
      />
      <!-- Gradient overlay on image -->
      <div class={`absolute inset-0 bg-gradient-to-t ${randomGradient} opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
    </a>
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <!-- Tags -->
    {postData.tags && postData.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {postData.tags.slice(0, 3).map((tag: any) => (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-blue-100/80 to-blue-200/80 dark:from-blue-900/50 dark:to-blue-800/50 text-blue-700 dark:text-blue-200 backdrop-blur-sm">
            {getTagValue(tag)}
          </span>
        ))}
      </div>
    )}
    
    <!-- Title -->
    <h2 class="mb-3 text-xl font-bold tracking-tight text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
      <a href={postUrl} class="hover:underline">
        {postData.title}
      </a>
    </h2>
    
    <!-- Description -->
    {postData.description && (
      <p class="mb-4 text-gray-600 dark:text-gray-300 line-clamp-3">
        {postData.description}
      </p>
    )}
    
    <!-- Meta Info -->
    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
        {postData.published ? new Date(postData.published).toLocaleDateString('id-ID', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        }) : 'Draft'}
      </span>
      
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
        </svg>
        {postData.source}
      </span>
    </div>
  </div>
</article>