---
export interface MegaMenuSection {
  title: string;
  icon?: string;
  items: MegaMenuItem[];
}

export interface MegaMenuItem {
  title: string;
  url: string;
  description?: string;
  icon?: string;
  badge?: string;
  isExternal?: boolean;
}

export interface UnifiedMegaMenuProps {
  trigger: string;
  sections: MegaMenuSection[];
  className?: string;
}

const { trigger, sections, className = '' } = Astro.props as UnifiedMegaMenuProps;
const menuId = `unified-mega-menu-${trigger.toLowerCase().replace(/\s+/g, '-')}`;
---

<div class={`relative group ${className}`}>
  <!-- Trigger Button -->
  <button
    type="button"
    class="flex items-center gap-1 px-3 py-2 text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 rounded-md"
    aria-expanded="false"
    aria-haspopup="true"
    aria-controls={menuId}
    data-unified-mega-menu-trigger={menuId}
  >
    <span>{trigger}</span>
    <svg 
      class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180"
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <!-- Modern Mega Menu Dropdown -->
  <div
    id={menuId}
    class="absolute left-0 top-full mt-2 w-80 opacity-0 invisible transform scale-95 transition-all duration-200 ease-out group-hover:opacity-100 group-hover:visible group-hover:scale-100 z-50"
    role="menu"
    aria-labelledby={`${menuId}-trigger`}
    data-unified-mega-menu-content={menuId}
  >
    <!-- Content Container - Modern Design -->
    <div class="relative bg-white dark:bg-gray-900 rounded-2xl shadow-2xl border border-gray-100 dark:border-gray-800 overflow-hidden backdrop-blur-xl">
      <!-- Menu Content -->
      <div class="p-6 space-y-6">
        {sections.map((section) => (
          <div class="space-y-4">
            <!-- Section Header -->
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider">
              {section.title}
            </h3>
            
            <!-- Section Items - Simple List with Arrow -->
            <div class="space-y-2">
              {section.items.map((item) => (
                <a
                  href={item.url}
                  class="group/item flex items-center justify-between gap-3 py-2 px-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
                  role="menuitem"
                  {...(item.isExternal && {
                    target: "_blank",
                    rel: "noopener noreferrer"
                  })}
                >
                  <!-- Item Title -->
                  <span class="text-sm text-gray-700 dark:text-gray-300 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 transition-colors">
                    {item.title}
                  </span>
                  
                  <!-- Arrow Icon -->
                  <svg 
                    class="w-4 h-4 text-gray-400 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 transition-colors flex-shrink-0" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Handle unified mega menu interactions with accordion behavior
    const megaMenus = document.querySelectorAll('[data-unified-mega-menu-trigger]');
    
    megaMenus.forEach(trigger => {
      const menuId = trigger.getAttribute('data-unified-mega-menu-trigger');
      const menuContent = document.querySelector(`[data-unified-mega-menu-content="${menuId}"]`) as HTMLElement;
      const parentGroup = trigger.closest('.group');
      
      if (!menuContent || !parentGroup) return;
      
      let timeout: NodeJS.Timeout;
      
      // Desktop interactions (hover) with accordion behavior
      const showMenu = () => {
        clearTimeout(timeout);
        
        // Close all other mega menus first (accordion behavior)
        megaMenus.forEach(otherTrigger => {
          if (otherTrigger !== trigger) {
            const otherMenuId = otherTrigger.getAttribute('data-unified-mega-menu-trigger');
            const otherMenuContent = document.querySelector(`[data-unified-mega-menu-content="${otherMenuId}"]`) as HTMLElement;
            const otherParentGroup = otherTrigger.closest('.group');
            
            if (otherMenuContent && otherParentGroup) {
              otherParentGroup.classList.remove('menu-open');
              otherTrigger.setAttribute('aria-expanded', 'false');
            }
          }
        });
        
        // Open current menu
        trigger.setAttribute('aria-expanded', 'true');
        parentGroup.classList.add('menu-open');
      };
      
      const hideMenu = () => {
        timeout = setTimeout(() => {
          trigger.setAttribute('aria-expanded', 'false');
          parentGroup.classList.remove('menu-open');
        }, 150);
      };
      
      // Mouse events for desktop
      parentGroup.addEventListener('mouseenter', showMenu);
      parentGroup.addEventListener('mouseleave', hideMenu);
      
      // Keyboard events
      trigger.addEventListener('keydown', (e) => {
        const keyEvent = e as KeyboardEvent;
        if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
          keyEvent.preventDefault();
          const isOpen = trigger.getAttribute('aria-expanded') === 'true';
          if (isOpen) {
            hideMenu();
          } else {
            showMenu();
          }
        } else if (keyEvent.key === 'Escape') {
          hideMenu();
          (trigger as HTMLElement).focus();
        } else if (keyEvent.key === 'ArrowDown') {
          keyEvent.preventDefault();
          showMenu();
          // Focus first menu item
          const firstMenuItem = menuContent.querySelector('a[role="menuitem"]') as HTMLElement;
          if (firstMenuItem) firstMenuItem.focus();
        }
      });
      
      // Handle menu item navigation
      const menuItems = menuContent.querySelectorAll('a[role="menuitem"]');
      menuItems.forEach((item, index) => {
        item.addEventListener('keydown', (e) => {
          const keyEvent = e as KeyboardEvent;
          if (keyEvent.key === 'ArrowDown') {
            keyEvent.preventDefault();
            const nextItem = menuItems[index + 1] as HTMLElement;
            if (nextItem) nextItem.focus();
          } else if (keyEvent.key === 'ArrowUp') {
            keyEvent.preventDefault();
            if (index === 0) {
              (trigger as HTMLElement).focus();
            } else {
              const prevItem = menuItems[index - 1] as HTMLElement;
              if (prevItem) prevItem.focus();
            }
          } else if (keyEvent.key === 'Escape') {
            hideMenu();
            (trigger as HTMLElement).focus();
          }
        });
      });
    });
  });
</script>

<style>
  /* Enhanced hover states for desktop */
  .group:hover [data-unified-mega-menu-content] {
    opacity: 1;
    visibility: visible;
    transform: scale(1);
  }
  
  .group.menu-open [data-unified-mega-menu-content] {
    opacity: 1;
    visibility: visible;
    transform: scale(1);
  }
  
  /* Smooth transitions */
  [data-unified-mega-menu-content] {
    transition: opacity 0.2s ease-out, visibility 0.2s ease-out, transform 0.2s ease-out;
  }
  
  /* Ensure proper stacking */
  [data-unified-mega-menu-content] {
    z-index: 50;
  }
  
  /* Focus styles for accessibility */
  [data-unified-mega-menu-trigger]:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Modern hover effects */
  .group:hover [data-unified-mega-menu-content] {
    transform: scale(1) translateY(0);
  }
  
  /* Smooth shadow transitions */
  [data-unified-mega-menu-content] {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  /* Dark mode enhancements */
  .dark [data-unified-mega-menu-content] {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
  }
</style>
