---
import Layout from '../../layouts/Layout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME } from '../../consts';

const title = `About - ${SITE_TITLE}`;
const description = `Learn more about ${COMPANY_NAME}, our mission, values, and commitment to delivering exceptional IT solutions. ${SITE_DESCRIPTION}`;
---

<Layout title={title} description={description}>
	<main id="main-content">
		<!-- Hero Section with Gradient Background -->
		<section class="relative py-20 overflow-hidden">
			<!-- Animated Gradient Background -->
			<div class="absolute inset-0 bg-gradient-to-br from-purple-400 via-pink-500 to-red-400 animate-pulse"></div>
			<div class="absolute inset-0 bg-gradient-to-tl from-blue-400 via-indigo-500 to-purple-400 animate-pulse" style="animation-delay: 1s;"></div>
			<div class="absolute inset-0 bg-gradient-to-r from-cyan-400 via-blue-500 to-indigo-400 animate-pulse" style="animation-delay: 2s;"></div>
			
			<div class="relative z-10 container mx-auto px-4 text-center text-white">
				<div class="mb-8">
					<div class="h-20 w-auto mx-auto mb-6 text-6xl font-bold text-white">ðŸš€</div>
				</div>
				<h1 class="text-5xl md:text-6xl font-bold mb-6 gradient-text-aurora">
					About Kotacom
				</h1>
				<p class="text-xl md:text-2xl mb-8 text-white/90 max-w-3xl mx-auto">
					Your trusted partner in digital transformation and IT innovation
				</p>
			</div>
		</section>

		<!-- Mission & Vision with Gradient Cards -->
		<section class="py-20 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
			<div class="container mx-auto px-4">
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<!-- Mission -->
					<div class="gradient-border-red p-8 rounded-xl">
						<h2 class="text-3xl md:text-4xl font-bold mb-6 gradient-text-sunset">
							Our Mission
						</h2>
						<p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
							To empower businesses with innovative technology solutions that drive growth, efficiency, and competitive advantage in the digital age.
						</p>
						<div class="flex items-center space-x-4">
							<div class="w-16 h-16 bg-gradient-to-br from-red-400 to-orange-400 rounded-full flex items-center justify-center">
								<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</div>
							<span class="text-sm text-gray-500 dark:text-gray-400">Innovation â€¢ Excellence â€¢ Growth</span>
						</div>
					</div>

					<!-- Vision -->
					<div class="gradient-border-blue p-8 rounded-xl">
						<h2 class="text-3xl md:text-4xl font-bold mb-6 gradient-text-ocean">
							Our Vision
						</h2>
						<p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
							To be the leading technology partner for businesses seeking digital transformation, recognized for our expertise, reliability, and commitment to client success.
						</p>
						<div class="flex items-center space-x-4">
							<div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full flex items-center justify-center">
								<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 10a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM6 12a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
								</svg>
							</div>
							<span class="text-sm text-gray-500 dark:text-gray-400">Leadership â€¢ Trust â€¢ Success</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Values Section with Gradient Icons -->
		<section class="py-20 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 dark:from-indigo-900 dark:via-purple-900 dark:to-pink-900">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text-mixed">
						Our Core Values
					</h2>
					<p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
						The principles that guide everything we do and every solution we deliver
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
					{[
						{ name: 'Innovation', icon: 'ðŸ’¡', gradient: 'from-yellow-400 via-orange-400 to-red-400', textClass: 'gradient-text-sunset', description: 'Pushing boundaries with cutting-edge solutions' },
						{ name: 'Excellence', icon: 'â­', gradient: 'from-blue-400 via-indigo-400 to-purple-400', textClass: 'gradient-text-aurora', description: 'Delivering quality that exceeds expectations' },
						{ name: 'Integrity', icon: 'ðŸ¤', gradient: 'from-green-400 via-teal-400 to-cyan-400', textClass: 'gradient-text-forest', description: 'Building trust through honest partnerships' },
						{ name: 'Collaboration', icon: 'ðŸš€', gradient: 'from-red-400 via-pink-400 to-purple-400', textClass: 'gradient-text-fire', description: 'Working together to achieve greatness' }
					].map((value) => (
						<div class="text-center group">
							<div class={`w-24 h-24 mx-auto mb-6 bg-gradient-to-br ${value.gradient} rounded-full flex items-center justify-center group-hover:scale-110 transition-transform`}>
								<span class="text-4xl">{value.icon}</span>
							</div>
							<h3 class={`text-xl font-bold mb-3 ${value.textClass}`}>{value.name}</h3>
							<p class="text-gray-600 dark:text-gray-300">{value.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Team Section with Gradient Cards -->
		<section class="py-20 bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text-sunset">
						Our Expert Team
					</h2>
					<p class="text-xl text-gray-300 max-w-3xl mx-auto">
						Meet the talented professionals who make our vision a reality
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					{[
						{ name: 'Development Team', role: 'Software Engineers', gradient: 'from-green-400 to-teal-400', textClass: 'gradient-text-forest', icon: 'ðŸ’»' },
						{ name: 'Design Team', role: 'UX/UI Specialists', gradient: 'from-blue-400 to-purple-400', textClass: 'gradient-text-ocean', icon: 'ðŸŽ¨' },
						{ name: 'Support Team', role: 'IT Professionals', gradient: 'from-red-400 to-orange-400', textClass: 'gradient-text-sunset', icon: 'ðŸ”§' },
						{ name: 'Consulting Team', role: 'Business Analysts', gradient: 'from-purple-400 to-pink-400', textClass: 'gradient-text-aurora', icon: 'ðŸ“Š' },
						{ name: 'Security Team', role: 'Cybersecurity Experts', gradient: 'from-cyan-400 to-blue-400', textClass: 'gradient-text-cosmic', icon: 'ðŸ”’' },
						{ name: 'Project Team', role: 'Project Managers', gradient: 'from-yellow-400 to-red-400', textClass: 'gradient-text-fire', icon: 'ðŸ“‹' }
					].map((member) => (
						<div class="card-creative group">
							<div class={`h-32 bg-gradient-to-br ${member.gradient} rounded-t-xl mb-4 flex items-center justify-center`}>
								<span class="text-6xl">{member.icon}</span>
							</div>
							<h3 class={`text-xl font-bold mb-2 ${member.textClass}`}>{member.name}</h3>
							<p class="text-gray-300 mb-4">{member.role}</p>
							<div class="w-full bg-gray-700 rounded-full h-2">
								<div class={`bg-gradient-to-r ${member.gradient} h-2 rounded-full`} style="width: 90%"></div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Stats Section with Gradient Numbers -->
		<section class="py-20 bg-gradient-to-br from-green-50 via-teal-50 to-cyan-50 dark:from-green-900 dark:via-teal-900 dark:to-cyan-900">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text-forest">
						Company Statistics
					</h2>
					<p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
						Numbers that reflect our growth, expertise, and commitment to excellence
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
					{[
						{ number: '5+', label: 'Years Experience', gradient: 'from-red-400 to-orange-400', textClass: 'gradient-text-sunset' },
						{ number: '100+', label: 'Projects Completed', gradient: 'from-blue-400 to-purple-400', textClass: 'gradient-text-ocean' },
						{ number: '50+', label: 'Happy Clients', gradient: 'from-green-400 to-teal-400', textClass: 'gradient-text-forest' },
						{ number: '24/7', label: 'Support Available', gradient: 'from-yellow-400 to-red-400', textClass: 'gradient-text-fire' }
					].map((stat) => (
						<div class="text-center group">
							<div class={`w-24 h-24 mx-auto mb-6 bg-gradient-to-br ${stat.gradient} rounded-full flex items-center justify-center group-hover:scale-110 transition-transform`}>
								<span class="text-3xl font-bold text-white">{stat.number}</span>
							</div>
							<h3 class={`text-xl font-bold mb-3 ${stat.textClass}`}>{stat.label}</h3>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- CTA Section with Animated Gradients -->
		<section class="py-20 relative overflow-hidden">
			<!-- Animated Background Gradients -->
			<div class="absolute inset-0 bg-gradient-to-r from-purple-400 via-pink-400 to-red-400 animate-pulse"></div>
			<div class="absolute inset-0 bg-gradient-to-l from-blue-400 via-indigo-400 to-purple-400 animate-pulse" style="animation-delay: 0.5s;"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-cyan-400 via-blue-400 to-indigo-400 animate-pulse" style="animation-delay: 1s;"></div>
			
			<div class="relative z-10 text-center text-white">
				<h2 class="text-4xl md:text-6xl font-bold mb-6 gradient-text-cosmic">
					Ready to Work Together?
				</h2>
				<p class="text-xl mb-8 text-white/90 max-w-3xl mx-auto">
					Let's discuss how our expertise can help transform your business and achieve your goals
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/contact" class="btn-creative text-lg px-8 py-4">
						Get in Touch
					</a>
					<a href="/services" class="gradient-bg-aurora text-white px-8 py-4 rounded-lg text-lg font-medium hover:scale-105 transition-transform">
						Explore Our Services
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>
