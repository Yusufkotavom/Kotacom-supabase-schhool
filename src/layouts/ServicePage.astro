---
import type { CollectionEntry } from "astro:content";
import MainLayout from "./MainLayout.astro";
import ResponsiveImage from "../components/ResponsiveImage.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import { COMPANY_NAME, COMPANY_WHATSAPP } from "../consts";

type Props = {
  title: string;
  category: string | string[];
  slug: string;
  imageUrl1?: string;
  published: any;
  wilayah?: string;
  provider?: string;
  type?: string;
  price?: string;
  url?: string;
  whatsappUrl?: string;
  mapsUrl?: string;
  verify?: boolean;
  imageUrl2?: string;
  imageUrl3?: string;
  review?: string;
  body?: string;
  description?: string;
  properties?: any;
};

const props = Astro.props as any;

// MDX-only normalized data
const serviceData = {
  title: props.title,
  category: Array.isArray(props.category) ? props.category.filter(Boolean) : (props.category ? [props.category] : []),
  slug: props.slug,
  imageUrl: props.imageUrl1,
  published: { start: props.published },
  lastUpdated: { start: props.published },
  wilayah: props.wilayah,
  provider: props.provider,
  type: props.type,
  price: props.price,
  url: props.url,
  whatsappUrl: props.whatsappUrl,
  mapsUrl: props.mapsUrl,
  verify: props.verify,
  imageUrl2: props.imageUrl2,
  imageUrl3: props.imageUrl3,
  review: props.review,
  body: props.body,
  description: props.description,
};

const title = serviceData.title + " - Services";
const description = serviceData.review || `Layanan ${serviceData.title} profesional dari ${COMPANY_NAME}`;
const DEFAULT_IMAGE = 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png';
const image = serviceData.imageUrl || DEFAULT_IMAGE;

// Parse date safely for schema
const publishedDate = serviceData.published?.start 
  ? (serviceData.published.start instanceof Date 
      ? serviceData.published.start.toISOString()
      : new Date(serviceData.published.start).toISOString())
  : new Date().toISOString();

const modifiedDate = serviceData.lastUpdated?.start 
  ? (serviceData.lastUpdated.start instanceof Date 
      ? serviceData.lastUpdated.start.toISOString()
      : new Date(serviceData.lastUpdated.start).toISOString())
  : publishedDate;

// Breadcrumbs for schema
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Services", url: "/services" },
  { name: serviceData.title, url: Astro.url.toString() }
];

// Sample reviews for service (you can make this dynamic from data)
const reviews = [
  {
    author: "Client Satisfied",
    rating: 5,
    reviewBody: `Layanan ${serviceData.title} sangat memuaskan dan profesional. Tim kotacom.id sangat responsif dan hasil kerja berkualitas tinggi.`,
    datePublished: publishedDate.split('T')[0]
  }
];

// Fallback images
const fallbackImage = DEFAULT_IMAGE;
const oneSec: string[] = [serviceData.imageUrl, serviceData.imageUrl2, serviceData.imageUrl3].filter((i: string) => !!i);
const images: string[] = oneSec.length > 0 ? oneSec : [fallbackImage];
---

<MainLayout title={title} description={description} image={image}>
  <SchemaMarkup
    type="service"
    title={serviceData.title}
    description={description}
    image={image}
    breadcrumbs={breadcrumbs}
    datePublished={publishedDate}
    dateModified={modifiedDate}
    category={serviceData.category}
    price={serviceData.price}
    reviews={reviews}
    data={{
      wilayah: serviceData.wilayah,
      provider: serviceData.provider,
      type: serviceData.type,
      verify: serviceData.verify
    }}
  />

  <!-- Breadcrumbs -->
  <section class="bg-gray-50 dark:bg-gray-800 py-4">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
              <svg class="w-3 h-3 mr-2.5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
              Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <a href="/services" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">Services</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">{serviceData.title}</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </section>

  <!-- Modern Hero Section with Flowbite Components -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start lg:items-center">
        <!-- Left Column: Content -->
        <div class="space-y-6 sm:space-y-8 order-2 lg:order-1">
          <!-- Category Badge -->
          {serviceData.category && serviceData.category.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {serviceData.category.map((cat: string) => (
                <a 
                  href={`/services/${cat.toLowerCase().replace(/\s+/g, '-')}/`}
                  class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-300 dark:hover:bg-blue-800 transition-colors duration-200 cursor-pointer"
                >
                  <svg class="w-2 h-2 sm:w-3 sm:h-3 mr-1 sm:mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  {cat}
                </a>
              ))}
            </div>
          )}

          <!-- Main Title -->
          <div>
            <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white leading-tight" data-pagefind-meta="title">
              {serviceData.title}
            </h1>
            <div class="mt-2 sm:mt-4 h-1 w-16 sm:w-20 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full"></div>
          </div>

          <!-- Description -->
          <div class="prose prose-sm sm:prose-base lg:prose-lg max-w-none">
            <p class="text-sm sm:text-base lg:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
              {description}
            </p>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 max-w-xs sm:max-w-sm lg:max-w-none">
            <WhatsAppButton 
              placement="hero_section"
              whatsappMessage={`Halo! Saya tertarik dengan layanan ${serviceData.title}. Bisa tolong jelaskan lebih detail tentang layanan ini?`}
              className="text-sm sm:text-base lg:text-lg px-4 sm:px-6 lg:px-8 py-2.5 sm:py-3 lg:py-4 justify-center"
            />
            
            {serviceData.url && (
              <a 
                href={serviceData.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center px-4 sm:px-6 lg:px-8 py-2.5 sm:py-3 lg:py-4 text-sm sm:text-base lg:text-lg font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-100 dark:text-white dark:bg-gray-800 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700 transition-all duration-200"
              >
                <svg class="w-3 h-3 sm:w-4 sm:h-4 lg:w-5 lg:h-5 mr-1.5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Kunjungi Website
              </a>
            )}
          </div>

          <!-- Simple Service Details (Text Only) -->
          <div class="pt-3 sm:pt-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex flex-col sm:flex-row sm:flex-wrap gap-3 sm:gap-6 text-xs sm:text-sm text-gray-600 dark:text-gray-400">
              {serviceData.price && (
                <span>Harga: <span class="font-semibold text-gray-900 dark:text-white">{serviceData.price}</span></span>
              )}
              {serviceData.provider && (
                <span>Provider: <span class="font-semibold text-gray-900 dark:text-white">{serviceData.provider}</span></span>
              )}
            </div>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-col sm:flex-row sm:items-center gap-3 sm:gap-6 pt-3 sm:pt-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-500 mr-1.5 sm:mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Konsultasi Gratis</span>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-500 mr-1.5 sm:mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Garansi 100%</span>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-500 mr-1.5 sm:mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Support 24/7</span>
            </div>
          </div>
        </div>

        <!-- Right Column: Image -->
        <div class="relative order-1 lg:order-2 mb-6 lg:mb-0">
          <div class="relative z-10">
            <ResponsiveImage
              src={image}
              alt={serviceData.title}
              class="rounded-lg sm:rounded-xl lg:rounded-2xl shadow-lg sm:shadow-xl lg:shadow-2xl w-full"
              loading="eager"
              fetchpriority="high"
              data-pagefind-meta="image[src], image_alt[alt]"
            />
          </div>
          
          <!-- Decorative Elements (Hidden on mobile) -->
          <div class="hidden lg:block absolute -top-4 -right-4 w-72 h-72 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
          <div class="hidden lg:block absolute -bottom-8 -left-8 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse animation-delay-2000"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="bg-gray-50 dark:bg-gray-800">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <article class="prose prose-sm max-w-none" data-pagefind-body data-pagefind-filter="type:service">
        <slot />
        
        <!-- Display description if available -->
        {serviceData.description && (
          <div class="mb-6">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-3">Description</h2>
            <div class="text-sm text-gray-700 dark:text-gray-300" set:html={serviceData.description}></div>
          </div>
        )}
        
        <!-- Display body content if available -->
        {serviceData.body && (
          <div class="mb-6">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-3">Service Details</h2>
            <div class="text-sm text-gray-700 dark:text-gray-300" set:html={serviceData.body}></div>
          </div>
        )}
        
        <!-- Display review if available -->
        {serviceData.review && (
          <div class="mb-6">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-3">Review</h2>
            <div class="text-sm text-gray-700 dark:text-gray-300" set:html={serviceData.review}></div>
          </div>
        )}
        
        {serviceData.category && serviceData.category.length > 0 && (
          <span class="hidden" data-pagefind-meta="categories">{serviceData.category.join(', ')}</span>
        )}
      </article>
    </div>
  </section>

  <!-- Enhanced Contact CTA Section -->
  <section class="bg-gradient-to-r from-blue-600 to-indigo-700 dark:from-blue-800 dark:to-indigo-900">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">
          Siap untuk memulai project Anda?
        </h2>
        <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">
          Dapatkan konsultasi gratis dan penawaran terbaik untuk layanan {serviceData.title}. Tim kami siap membantu mewujudkan ide Anda menjadi kenyataan.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-3 justify-center items-center max-w-sm sm:max-w-md mx-auto">
          <WhatsAppButton 
            placement="bottom_cta"
            whatsappMessage={`Halo! Saya ingin konsultasi tentang layanan ${serviceData.title}. Bisa tolong kirimkan penawaran dan informasi lengkapnya?`}
            className="text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 bg-white text-green-600 hover:bg-gray-50 justify-center"
          />
          
          <a 
            href="tel:+6285799520350"
            class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg font-medium text-blue-600 bg-white rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-white/20 transition-all duration-200"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Hubungi via Telepon
          </a>
        </div>
        
        <div class="mt-8 flex justify-center space-x-8 text-blue-100">
          <div class="text-center">
            <div class="text-xl font-bold">500+</div>
            <div class="text-sm">Project Selesai</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold">98%</div>
            <div class="text-sm">Client Puas</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold">24/7</div>
            <div class="text-sm">Support</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>