---
import { Image } from "astro:assets";
import KotacomLogo from "../assets/kotacom-logo.svg";
import { SITE_TITLE, COMPANY_NAME, COMPANY_WHATSAPP } from "../consts";
const today = new Date();

let settings = null as any;

const footerNav = [
  {
    title: 'Layanan Utama',
    links: [
      { title: 'Website Development', url: '/jasa-pembuatan-website-surabaya' },
      { title: 'Software Development', url: '/jasa-pembuatan-software' },
      { title: 'IT Support & Maintenance', url: '/services/it-support' },
      { title: 'Mobile App Development', url: '/jasa-pembuatan-mobile-app' },
      { title: 'E-commerce Solutions', url: '/jasa-toko-online' },
      { title: 'Network Setup', url: '/jasa-instalasi-jaringan' },
    ],
  },
  {
    title: 'Portfolio & Produk',
    links: [
      { title: 'Semua Portfolio', url: '/projects' },
      { title: 'Website Portfolio', url: '/projects?category=website' },
      { title: 'Software Portfolio', url: '/projects?category=software' },
      { title: 'Produk Digital', url: '/products' },
      { title: 'Template & Tools', url: '/products?category=template' },
      { title: 'Case Studies', url: '/projects?featured=true' },
    ],
  },
  {
    title: 'Artikel & Edukasi',
    links: [
      { title: 'Semua Artikel', url: '/posts' },
      { title: 'Tips IT & Teknologi', url: '/category/it-tips' },
      { title: 'Panduan Website', url: '/category/website-guide' },
      { title: 'Tutorial Software', url: '/category/software-tutorial' },
      { title: 'Kategori Artikel', url: '/category' },
      { title: 'Search Artikel', url: '/search' },
    ],
  },
  {
    title: 'Perusahaan & Legal',
    links: [
      { title: 'Tentang Kami', url: '/about' },
      { title: 'Tim Kami', url: '/about#team' },
      { title: 'Bergabung Tim', url: '/about#team' },
      { title: 'Kontak Kami', url: '/contact' },
      { title: 'Lokasi Kantor', url: '/contact#location' },
      { title: 'Kebijakan Privasi', url: '/privacy' },
      { title: 'Syarat & Ketentuan', url: '/terms' },
      { title: 'FAQ', url: '/faq' },
    ],
  },
  {
    title: 'Kontak Cepat',
    links: [
      { title: `WhatsApp: ${COMPANY_WHATSAPP}`, url: `https://wa.me/${COMPANY_WHATSAPP}` },
      { title: 'Email: info@kotacom.id', url: 'mailto:info@kotacom.id' },
      { title: 'Konsultasi Gratis', url: '/contact' },
      { title: 'Request Quote', url: '/contact#quote' },
      { title: 'Support', url: `https://wa.me/${COMPANY_WHATSAPP}?text=Hi%2C%20saya%20butuh%20bantuan%20teknis` },
      { title: 'Live Chat', url: '/contact' },
    ],
  },
];

const companyName = COMPANY_NAME;
const whatsapp = COMPANY_WHATSAPP;
---

<section
  class="bg-[#F1E8FB] dark:bg-gray-900"
  aria-labelledby="newsletter-heading"
>
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md sm:text-center">
      <h2
        id="newsletter-heading"
        class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl dark:text-white"
      >
        Bergabung dengan kotacom.id
      </h2>
      <p
        class="mx-auto mb-8 max-w-2xl font-light text-gray-500 md:mb-12 sm:text-xl dark:text-gray-400"
      >
        Dapatkan update terbaru tentang layanan IT, tips teknologi, dan solusi digital 
        untuk mengembangkan bisnis Anda
      </p>
      <form
        action="https://submit-form.com/IlQ2jAQOf"
        method="POST"
        class="w-100%"
      >
        <div
          class="items-center mx-auto mb-3 space-y-4 max-w-screen-sm sm:flex sm:space-y-0"
        >
          <div class="relative w-full">
            <label
              for="email"
              class="hidden mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Email address</label
            >
            <div
              class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none"
            >
              <svg
                class="w-5 h-5 text-gray-500 dark:text-gray-400"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
            </div>
            <input
              class="block p-3 pl-10 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 sm:rounded-none sm:rounded-l-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
              placeholder="Masukkan email Anda"
              type="email"
              id="email"
              name="email"
              required
            />
            <input
              type="checkbox"
              name="consent"
              style="display:none"
              tabindex="-1"
              autocomplete="off"
            />
            <input
              type="hidden"
              name="_redirect"
              value="https://kotacom.id/join/confirm"
            />
            <input type="hidden" name="_append" value="false" />
          </div>
          <div>
            <button
              type="submit"
              class="py-3 px-5 w-full text-sm font-medium text-center text-white rounded-lg border cursor-pointer bg-black border-primary-600 sm:rounded-none sm:rounded-r-lg hover:bg-gray-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
            >
              Subscribe
            </button>
          </div>
        </div>
        <div
          class="mx-auto max-w-screen-sm text-sm text-left text-gray-500 newsletter-form-footer dark:text-gray-300"
        >
          Kami menghormati privasi Anda. 
          <a
            href="/privacy"
            class="font-medium text-primary-600 dark:text-primary-500 hover:underline"
            >Kebijakan Privasi</a
          >
        </div>
      </form>
    </div>
  </div>
</section>

<footer class="p-4 bg-gray-50 sm:p-6 dark:bg-gray-800" role="contentinfo">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="https://kotacom.id" class="flex items-center">
          <Image src={KotacomLogo} class="h-16 w-auto" alt="kotacom.id" />
          <br>
          <p class="text-sm text-gray-500 sm:text-center dark:text-gray-400">Solusi IT & Digital Terpadu untuk Bisnis Anda</p>
          <p class="text-sm text-gray-500 sm:text-center dark:text-gray-400">Fokus pada pertumbuhan, biarkan kami yang urus website, software, infrastruktur IT, dan promosi digital Anda.</p>
          <p class="text-xs text-gray-400 sm:text-center dark:text-gray-500 mt-2">Berdiri sejak 2008 &mdash; Melayani Surabaya, Sidoarjo, Gresik, dan seluruh Indonesia.</p>
        </a>
      </div>
      <div class="grid grid-cols-1 gap-8 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5">
        {footerNav.map((section: any) => (
          <div>
            <h2
              class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
            >
              {section.title}
            </h2>
            <ul class="text-gray-600 dark:text-gray-400">
              {section.links.map((link: any) => (
                <li class="mb-4">
                  <a href={link.url} class="hover:underline">{link.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >&copy; {today.getFullYear()} {companyName}. All Rights Reserved.
      </span>
      <div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
        <a
          href={`https://wa.me/${whatsapp}`}
          class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          aria-label="WhatsApp"
        >
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
