---
// Contact Buttons Component (Phone + WhatsApp)
interface Props {
  phoneNumber?: string;
  whatsappMessage?: string;
  className?: string;
  trackClicks?: boolean; // New prop for tracking
}

const { 
  phoneNumber = "085799520350",
  whatsappMessage = "Hallo kak saya melihat {url}. Nama: jelaskan kebutuhan",
  className = "",
  trackClicks = true // Default to true for tracking
} = Astro.props;

// Get current page URL
const currentUrl = Astro.url.href;
const formattedMessage = whatsappMessage.replace('{url}', currentUrl);
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(formattedMessage)}`;
const phoneUrl = `tel:${phoneNumber}`;
---

<div class={`contact-buttons ${className}`}>
  <!-- Phone Button -->
  <a 
    href={phoneUrl}
    class="contact-button phone-button"
    aria-label="Call via Phone"
  >
    <svg 
      width="20" 
      height="20" 
      viewBox="0 0 24 24" 
      fill="currentColor"
      aria-hidden="true"
    >
      <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
    </svg>
  </a>

  <!-- WhatsApp Button with Tracking -->
  <a 
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="contact-button whatsapp-button"
    aria-label="Chat via WhatsApp"
    onclick={trackClicks ? "trackWhatsAppClick('floating_button')" : ""}
  >
    <svg 
      width="20" 
      height="20" 
      viewBox="0 0 24 24" 
      fill="currentColor"
      aria-hidden="true"
    >
      <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
    </svg>
  </a>
</div>

<style>
  .contact-buttons {
    position: fixed;
    bottom: 20px;
    right: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 1000;
  }

  .contact-button {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .phone-button {
    background-color: #007bff;
    color: white;
  }

  .phone-button:hover {
    background-color: #0056b3;
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
  }

  .whatsapp-button {
    background-color: #25d366;
    color: white;
  }

  .whatsapp-button:hover {
    background-color: #128c7e;
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
  }

  .contact-button:active {
    transform: scale(0.95);
  }

  .contact-button svg {
    width: 20px;
    height: 20px;
  }

  /* Animation for attention */
  @keyframes pulse {
    0% {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }
    50% {
      box-shadow: 0 2px 16px rgba(0, 0, 0, 0.3);
    }
    100% {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }
  }

  .contact-button {
    animation: pulse 3s infinite;
  }

  .contact-button:hover {
    animation: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .contact-buttons {
      bottom: 15px;
      right: 15px;
      gap: 10px;
    }

    .contact-button {
      width: 45px;
      height: 45px;
    }
    
    .contact-button svg {
      width: 18px;
      height: 18px;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .contact-button {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
  }
</style>
