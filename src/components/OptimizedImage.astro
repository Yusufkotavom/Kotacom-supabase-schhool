---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  priority?: boolean;
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  priority = false
} = Astro.props;

// Generate WebP version path
const webpSrc = src.replace(/\.(png|jpg|jpeg|gif)$/i, '.webp');
const isWebPSupported = true; // Modern browsers support WebP
---

<picture>
  {isWebPSupported && (
    <source srcset={webpSrc} type="image/webp">
  )}
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={priority ? 'eager' : loading}
    decoding="async"
    {priority && { fetchpriority: 'high' }}
  />
</picture>