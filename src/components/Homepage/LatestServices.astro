---
// Latest Services section for homepage

import { getCollection } from "astro:content";
import ServiceCard from "../ServiceCard.astro";
import SCategoryDropdown from "../SCategoryDropdown.astro";
import SchoolLottieSeparator from "../SchoolLottieSeparator.astro";
import { getServicesDirectFromSupabase, convertSupabaseService } from "../../lib/supabase-direct";

// Props: limit specifies the number of services to display
interface Props {
  limit: number;
}

const { limit } = Astro.props;

// Fetch from MD and Supabase Direct (much faster!)
let mdxServices = [] as any[];
try { mdxServices = await getCollection("servicesMdx"); } catch {}
const supabaseServices = await getServicesDirectFromSupabase(1000, 'published'); // Only published services

// Normalize MDX services
const normalizedMdxServices = mdxServices.map((entry) => ({
  ...entry,
  source: 'mdx',
  data: {
    ...entry.data,
    properties: {
      svTitle: entry.data.title,
      svProvider: entry.data.provider,
      svWilayah: entry.data.wilayah,
      svCategory: entry.data.category,
      svSlug: entry.data.slug,
      svImageURL1: entry.data.imageUrl || "",
      svPublished: { start: entry.data.published },
      svDescription: entry.data.description,
      svPrice: entry.data.price || "",
      svWhatsAppURL: entry.data.whatsappUrl || "",
    },
  },
}));

// Normalize Supabase services
const normalizedSupabase = supabaseServices.map((s: any) => ({
  source: 'supabase',
  data: { properties: {
    svTitle: s.title,
    svProvider: s.provider,
    svWilayah: (s.wilayah||[]).map((x:any)=>x.value||x),
    svCategory: (s.category||[]).map((x:any)=>x.value||x),
    svSlug: s.slug,
    svImageURL1: s.imageUrl || s.cover_image || "",
    svPublished: { start: s.published ? new Date(s.published) : new Date(0) },
    svDescription: s.description,
    svPrice: s.price || "",
    svWhatsAppURL: s.whatsappUrl || "",
  } }
}));

// Merge
const allServices = [...normalizedMdxServices, ...normalizedSupabase];

// Sort by svPublished date (descending)
const sortedEntries = allServices.sort((a, b) => {
  const dateA = a.data.properties.svPublished?.start || new Date(0);
  const dateB = b.data.properties.svPublished?.start || new Date(0);
  return dateB.getTime() - dateA.getTime();
});

// Limit
const limitedEntries = sortedEntries.slice(0, limit);

// Debug info
console.log(`LatestServices: Found ${mdxServices.length} MD services, supabase ${supabaseServices.length}, showing ${limitedEntries.length} total`);
---

<section class="bg-gradient-to-br from-yellow-50 via-white to-blue-50 dark:from-yellow-900/20 dark:via-gray-900 dark:to-blue-900/20">
  <!-- Lottie Separator -->
  <SchoolLottieSeparator animation="heart" height="h-16" className="pt-8" />
  
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="flex flex-col items-start justify-between p-2 space-y-3 md:flex-row md:space-y-0 mb-4">
      <div class="max-w-screen-md">
        <h2
          class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
        >
          Layanan IT Terbaru
        </h2>
        <p class="text-gray-500 sm:text-xl dark:text-gray-400">
          Solusi teknologi terkini untuk mengoptimalkan kinerja bisnis dan meningkatkan produktivitas perusahaan Anda.
        </p>
      </div>
    </div>
    <div
      class="flex flex-row overflow-x-auto hide-scrollbar space-x-4 md:space-x-0 md:space-y-0 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12"
    >
      {limitedEntries.map((service) => (
        <div class="w-[70%] sm:w-[50%] md:w-auto flex-shrink-0 md:flex-shrink">
          <ServiceCard service={service} />
        </div>
      ))}
    </div>
  </div>
</section>