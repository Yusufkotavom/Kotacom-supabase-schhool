---
export interface MegaMenuSection {
  title: string;
  icon?: string;
  items: MegaMenuItem[];
}

export interface MegaMenuItem {
  title: string;
  url: string;
  description?: string;
  icon?: string;
  badge?: string;
  isExternal?: boolean;
}

export interface MobileUnifiedMegaMenuProps {
  trigger: string;
  sections: MegaMenuSection[];
  className?: string;
}

const { trigger, sections, className = '' } = Astro.props as MobileUnifiedMegaMenuProps;
const menuId = `mobile-unified-mega-menu-${trigger.toLowerCase().replace(/\s+/g, '-')}`;
---

<div class={`w-full ${className}`}>
  <!-- Mobile Menu Trigger (Flowbite-like, minimal) -->
  <button
    type="button"
    class="flex items-center justify-between w-full py-3 pl-3 pr-4 text-sm font-medium text-gray-700 border-b border-gray-200 hover:bg-gray-50 hover:text-gray-900 dark:text-gray-200 dark:border-gray-700 dark:hover:bg-gray-800 dark:hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
    aria-expanded="false"
    aria-haspopup="true"
    aria-controls={menuId}
    data-mobile-unified-mega-menu-trigger={menuId}
  >
    <span>{trigger}</span>
    <svg 
      class="w-4 h-4 transition-transform duration-200 mobile-unified-mega-menu-chevron" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <!-- Mobile Menu Content - Minimal List -->
  <div
    id={menuId}
    class="w-full bg-white dark:bg-gray-900 max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
    role="menu"
    aria-labelledby={`${menuId}-trigger`}
    data-mobile-unified-mega-menu-content={menuId}
  >
    <!-- Menu Content -->
    <div class="py-2 space-y-4">
      {sections.map((section) => (
        <div class="space-y-1">
          <!-- Section Header -->
          <h3 class="px-4 pt-2 text-xs font-semibold text-gray-500 tracking-wide uppercase dark:text-gray-400">
            {section.title}
          </h3>
          
          <!-- Section Items - Simple List with Arrow -->
          <div class="space-y-1">
            {section.items.map((item) => (
              <a
                href={item.url}
                class="group/item flex items-center justify-between w-full py-2 pl-8 pr-4 text-sm text-gray-700 hover:bg-gray-50 hover:text-blue-600 dark:text-gray-200 dark:hover:bg-gray-800 dark:hover:text-blue-400 focus:outline-none"
                role="menuitem"
                {...(item.isExternal && {
                  target: "_blank",
                  rel: "noopener noreferrer"
                })}
              >
                <!-- Item Title -->
                <span class="truncate">
                  {item.title}
                </span>
                
                <!-- Arrow Icon -->
                <svg 
                  class="w-4 h-4 text-gray-400 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 flex-shrink-0" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Handle mobile unified mega menu interactions with accordion behavior
    const mobileMegaMenus = document.querySelectorAll('[data-mobile-unified-mega-menu-trigger]');
    
    mobileMegaMenus.forEach(trigger => {
      const menuId = trigger.getAttribute('data-mobile-unified-mega-menu-trigger');
      const menuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${menuId}"]`) as HTMLElement;
      
      if (!menuContent) return;
      
      // Main menu toggle with accordion behavior
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const isOpen = trigger.getAttribute('aria-expanded') === 'true';
        
        if (isOpen) {
          // Close menu
          trigger.setAttribute('aria-expanded', 'false');
          menuContent.style.maxHeight = '0px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
        } else {
          // Close other mobile menus first (accordion behavior)
          mobileMegaMenus.forEach(otherTrigger => {
            if (otherTrigger !== trigger) {
              const otherMenuId = otherTrigger.getAttribute('data-mobile-unified-mega-menu-trigger');
              const otherMenuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${otherMenuId}"]`) as HTMLElement;
              
              otherTrigger.setAttribute('aria-expanded', 'false');
              if (otherMenuContent) otherMenuContent.style.maxHeight = '0px';
              otherTrigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
            }
          });
          
          // Open menu
          trigger.setAttribute('aria-expanded', 'true');
          menuContent.style.maxHeight = menuContent.scrollHeight + 'px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.add('rotate-180');
        }
      });
    });
    
    // Close mobile menus on outside click
    document.addEventListener('click', (e) => {
      const target = e.target as Element;
      if (!target.closest('[data-mobile-unified-mega-menu-trigger], [data-mobile-unified-mega-menu-content]')) {
        mobileMegaMenus.forEach(trigger => {
          const menuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${trigger.getAttribute('data-mobile-unified-mega-menu-trigger')}"]`) as HTMLElement;
          trigger.setAttribute('aria-expanded', 'false');
          if (menuContent) menuContent.style.maxHeight = '0px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
        });
      }
    });
  });
</script>

<style>
  /* Mobile unified mega menu specific styles */
  [data-mobile-unified-mega-menu-content] {
    transition: max-height 0.3s ease-in-out;
  }
  
  /* Chevron animations */
  .mobile-unified-mega-menu-chevron {
    transition: transform 0.2s ease-in-out;
  }
  
  .mobile-unified-mega-menu-chevron.rotate-180 {
    transform: rotate(180deg);
  }
  
  /* Focus styles for accessibility */
  [data-mobile-unified-mega-menu-trigger]:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Smooth hover transitions */
  [data-mobile-unified-mega-menu-trigger] {
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, transform 0.2s ease-in-out;
  }
  
  /* Hover effects */
  [data-mobile-unified-mega-menu-trigger]:hover {
    transform: translateX(4px);
  }
  
  /* Modern item hover effects */
  [data-mobile-unified-mega-menu-content] a[role="menuitem"]:hover {
    transform: translateX(8px);
  }
  
  /* Smooth transitions for all interactive elements */
  [data-mobile-unified-mega-menu-content] a[role="menuitem"] {
    transition: all 0.2s ease-in-out;
  }
</style>
