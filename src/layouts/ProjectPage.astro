---
import type { CollectionEntry } from "astro:content";
import MainLayout from "./MainLayout.astro";
import ResponsiveImage from "../components/ResponsiveImage.astro";
import SchemaMarkup from "../components/SchemaMarkup.astro";
import { COMPANY_NAME } from "../consts";
import RelatedList from "../components/RelatedList.astro";

type Props = CollectionEntry<"projectsMdx">["data"];

// Get frontmatter data directly from Astro.props for MDX files
const frontmatter = Astro.props.frontmatter || Astro.props;
const properties = frontmatter.properties || frontmatter;

// MDX-only normalized data
const projectData = {
  title: properties.title,
  category: Array.isArray(properties.category) ? properties.category.filter(Boolean) : (properties.category ? [properties.category] : []),
  slug: properties.slug,
  imageUrl: properties.imageUrl,
  published: { start: properties.published },
  country: properties.country,
  locale: properties.locale,
  organiser: properties.organiser,
  cost: properties.cost,
  url: properties.url,
  gygUrl: properties.gygUrl,
  mapsUrl: properties.mapsUrl,
  verify: properties.verify,
  review: properties.review,
  getInvolved: properties.getInvolved,
  get_involved: properties.get_involved, // Supabase version
  description: properties.description, // Add description field
  body: properties.body, // Add body field
  // Case study fields
  client: properties.client,
  clientIndustry: properties.clientIndustry,
  projectDuration: properties.projectDuration,
  teamSize: properties.teamSize,
  technologies: Array.isArray(properties.technologies) ? properties.technologies.filter(Boolean) : (properties.technologies ? [properties.technologies] : []),
  challenges: properties.challenges,
  solutions: properties.solutions,
  results: properties.results,
  beforeMetrics: properties.beforeMetrics,
  afterMetrics: properties.afterMetrics,
  roiPercentage: properties.roiPercentage,
  clientTestimonial: properties.clientTestimonial,
  clientName: properties.clientName,
  clientPosition: properties.clientPosition,
  // Additional fields
  beforeImage: properties.beforeImage,
  afterImage: properties.afterImage,
  additionalImages: Array.isArray(properties.additionalImages) ? properties.additionalImages.filter(Boolean) : (properties.additionalImages ? [properties.additionalImages] : [])
};

const title = projectData.title + " - Projects";
const description = projectData.challenges || properties.pReview || `Case study ${projectData.title} dari ${COMPANY_NAME}`;
const DEFAULT_IMAGE = 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png';
const featuredImage = projectData.imageUrl || DEFAULT_IMAGE;

// Parse date safely for schema
const publishedDate = projectData.published?.start 
  ? (projectData.published.start instanceof Date 
      ? projectData.published.start.toISOString()
      : new Date(projectData.published.start).toISOString())
  : new Date().toISOString();

// Breadcrumbs for schema
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Projects", url: "/projects" },
  { name: projectData.title, url: Astro.url.toString() }
];

// Generate reviews from client testimonial if available
const reviews = projectData.clientTestimonial ? [
  {
    author: projectData.clientName || "Client",
    rating: 5,
    reviewBody: projectData.clientTestimonial,
    datePublished: publishedDate.split('T')[0]
  }
] : [];

const fallbackImage = DEFAULT_IMAGE;
const oneSec: string[] = [projectData.imageUrl].filter((i: string) => !!i);
const images: string[] = oneSec.length > 0 ? oneSec : [fallbackImage];
---

<MainLayout title={title} description={description} image={featuredImage}>
  <SchemaMarkup
    type="project"
    title={projectData.title}
    description={description}
    image={featuredImage}
    breadcrumbs={breadcrumbs}
    datePublished={publishedDate}
    dateModified={publishedDate}
    category={projectData.category}
    tags={projectData.technologies}
    reviews={reviews}
    data={{
      client: projectData.client,
      clientIndustry: projectData.clientIndustry,
      projectDuration: projectData.projectDuration,
      teamSize: projectData.teamSize,
      technologies: projectData.technologies,
      challenges: projectData.challenges,
      solutions: projectData.solutions,
      results: projectData.results,
      roiPercentage: projectData.roiPercentage
    }}
  />

  <!-- Breadcrumbs -->
  <section class="bg-gray-50 dark:bg-gray-800 py-4">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-red-600 dark:text-gray-400 dark:hover:text-white">
              <svg class="w-3 h-3 mr-2.5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
              Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <a href="/projects" class="ml-1 text-sm font-medium text-gray-700 hover:text-red-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">Projects</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">{projectData.title}</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </section>

  <!-- Project Header -->
  <section class="bg-white dark:bg-gray-900">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6" data-pagefind-meta="title">
            {projectData.title}
          </h1>
          
          {projectData.client && (
            <div class="mb-4">
              <span class="text-lg text-gray-600 dark:text-gray-400">Client: </span>
              <span class="text-lg font-semibold text-red-600 dark:text-red-400">
                {projectData.client}
              </span>
            </div>
          )}
          
          {projectData.organiser && (
            <div class="mb-4">
              <span class="text-lg text-gray-600 dark:text-gray-400">Organiser: </span>
              <span class="text-lg font-semibold text-red-600 dark:text-red-400">
                {projectData.organiser}
              </span>
            </div>
          )}
          
          {projectData.cost && projectData.cost.length > 0 && (
            <div class="mb-4">
              <span class="text-lg text-gray-600 dark:text-gray-400">Cost: </span>
              <span class="text-lg font-semibold text-green-600 dark:text-green-400">
                {projectData.cost.length === 1 
                  ? `Rp ${parseInt(projectData.cost[0]).toLocaleString('id-ID')}`
                  : `Rp ${parseInt(projectData.cost[0]).toLocaleString('id-ID')} - ${parseInt(projectData.cost[1]).toLocaleString('id-ID')}`
                }
              </span>
            </div>
          )}
          
          {projectData.verify && (
            <div class="mb-4">
              <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 border border-green-200 dark:bg-green-900 dark:text-green-300 dark:border-green-700">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                {projectData.verify}
              </div>
            </div>
          )}
          
          {projectData.category && projectData.category.length > 0 && (
            <div class="mb-6">
              <div class="flex flex-wrap gap-2">
                {projectData.category.map((cat: string) => (
                  <span class="bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">
                    {cat}
                  </span>
                ))}
              </div>
            </div>
          )}
          
          {projectData.roiPercentage && (
            <div class="mb-6">
              <div class="bg-green-50 border border-green-200 rounded-lg p-4 dark:bg-green-900 dark:border-green-700">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-green-800 font-semibold dark:text-green-200">
                    ROI: {projectData.roiPercentage}
                  </span>
                </div>
              </div>
            </div>
          )}
        </div>
        
        <div class="relative">
          <ResponsiveImage
            src={featuredImage}
            alt={projectData.title}
            class="rounded-lg shadow-lg"
            loading="eager"
            fetchpriority="high"
            data-pagefind-meta="image[src], image_alt[alt]"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Project Details -->
  {(projectData.client || projectData.projectDuration || projectData.teamSize || projectData.technologies.length > 0) && (
    <section class="bg-gray-50 dark:bg-gray-800">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Project Details</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {projectData.client && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Client</h3>
              <p class="text-lg font-semibold text-gray-900 dark:text-white">{projectData.client}</p>
              {projectData.clientIndustry && (
                <p class="text-sm text-gray-600 dark:text-gray-300">{projectData.clientIndustry}</p>
              )}
            </div>
          )}
          
          {projectData.projectDuration && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Duration</h3>
              <p class="text-lg font-semibold text-gray-900 dark:text-white">{projectData.projectDuration}</p>
            </div>
          )}
          
          {projectData.teamSize && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Team Size</h3>
              <p class="text-lg font-semibold text-gray-900 dark:text-white">{projectData.teamSize}</p>
            </div>
          )}
          
          {projectData.technologies.length > 0 && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Technologies</h3>
              <div class="flex flex-wrap gap-1">
                {projectData.technologies.slice(0, 3).map((tech: string) => (
                  <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-1 rounded dark:bg-gray-700 dark:text-gray-300">
                    {tech}
                  </span>
                ))}
                {projectData.technologies.length > 3 && (
                  <span class="text-xs text-gray-500">+{projectData.technologies.length - 3} more</span>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Project Information -->
  {(projectData.organiser || projectData.country?.length > 0 || projectData.locale?.length > 0 || projectData.url || projectData.gygUrl || projectData.mapsUrl) && (
    <section class="bg-gray-50 dark:bg-gray-800">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Project Information</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projectData.organiser && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Organiser</h3>
              <p class="text-lg font-semibold text-gray-900 dark:text-white">{projectData.organiser}</p>
            </div>
          )}
          
          {projectData.country && projectData.country.length > 0 && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Country</h3>
              <div class="flex flex-wrap gap-1">
                {projectData.country.map((country: string) => (
                  <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-1 rounded dark:bg-gray-700 dark:text-gray-300">
                    {country}
                  </span>
                ))}
              </div>
            </div>
          )}
          
          {projectData.locale && projectData.locale.length > 0 && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Locale</h3>
              <div class="flex flex-wrap gap-1">
                {projectData.locale.map((loc: string) => (
                  <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-1 rounded dark:bg-gray-700 dark:text-gray-300">
                    {loc}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
        
        {(projectData.url || projectData.gygUrl || projectData.mapsUrl) && (
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Project Links</h3>
            <div class="flex flex-wrap gap-4">
              {projectData.url && (
                <a href={projectData.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  Project URL
                </a>
              )}
              {projectData.gygUrl && (
                <a href={projectData.gygUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  GYG URL
                </a>
              )}
              {projectData.mapsUrl && (
                <a href={projectData.mapsUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  Maps URL
                </a>
              )}
            </div>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Content Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <article class="prose prose-lg max-w-none" data-pagefind-body data-pagefind-filter="type:project">
        <slot />
        
        <!-- Display body content if available -->
        {projectData.body && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Content</h2>
            <div class="text-gray-700 dark:text-gray-300" set:html={projectData.body}></div>
          </div>
        )}
        
        <!-- Display description if available -->
        {projectData.description && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Description</h2>
            <div class="text-gray-700 dark:text-gray-300" set:html={projectData.description}></div>
          </div>
        )}
        
        <!-- Display review if available -->
        {projectData.review && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Review</h2>
            <div class="text-gray-700 dark:text-gray-300" set:html={projectData.review}></div>
          </div>
        )}
        
        <!-- Display getInvolved if available -->
        {projectData.getInvolved && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Get Involved</h2>
            <div class="text-gray-700 dark:text-gray-300" set:html={projectData.getInvolved}></div>
          </div>
        )}
        
        <!-- Display get_involved from Supabase if available -->
        {projectData.get_involved && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Get Involved</h2>
            <div class="text-gray-700 dark:text-gray-300" set:html={projectData.get_involved}></div>
          </div>
        )}
        
        {projectData.category && projectData.category.length > 0 && (
          <span class="hidden" data-pagefind-meta="categories">{projectData.category.join(', ')}</span>
        )}
      </article>
    </div>
  </section>

  <!-- Client Testimonial -->
  {projectData.clientTestimonial && (
    <section class="bg-red-50 dark:bg-red-900">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Client Testimonial</h2>
          <blockquote class="text-xl italic text-gray-700 dark:text-gray-300 mb-6">
            "{projectData.clientTestimonial}"
          </blockquote>
          {projectData.clientName && (
            <div class="text-gray-600 dark:text-gray-400">
              <p class="font-semibold">{projectData.clientName}</p>
              {projectData.clientPosition && (
                <p class="text-sm">{projectData.clientPosition}</p>
              )}
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Before/After Metrics -->
  {(projectData.beforeMetrics || projectData.afterMetrics) && (
    <section class="bg-gray-50 dark:bg-gray-800">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">Performance Metrics</h2>
        <div class="grid md:grid-cols-2 gap-8">
          {projectData.beforeMetrics && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 text-center">Before</h3>
              <div class="space-y-3">
                {projectData.beforeMetrics.traffic && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Traffic:</span>
                    <span class="font-medium text-gray-900 dark:text-white">{projectData.beforeMetrics.traffic}</span>
                  </div>
                )}
                {projectData.beforeMetrics.conversions && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Conversions:</span>
                    <span class="font-medium text-gray-900 dark:text-white">{projectData.beforeMetrics.conversions}</span>
                  </div>
                )}
                {projectData.beforeMetrics.revenue && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Revenue:</span>
                    <span class="font-medium text-gray-900 dark:text-white">{projectData.beforeMetrics.revenue}</span>
                  </div>
                )}
                {projectData.beforeMetrics.performance && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Performance:</span>
                    <span class="font-medium text-gray-900 dark:text-white">{projectData.beforeMetrics.performance}</span>
                  </div>
                )}
                {projectData.beforeMetrics.other && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Other:</span>
                    <span class="font-medium text-gray-900 dark:text-white">{projectData.beforeMetrics.other}</span>
                  </div>
                )}
              </div>
            </div>
          )}
          
          {projectData.afterMetrics && (
            <div class="bg-white p-6 rounded-lg shadow dark:bg-gray-900 border-l-4 border-green-500">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 text-center">After</h3>
              <div class="space-y-3">
                {projectData.afterMetrics.traffic && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Traffic:</span>
                    <span class="font-medium text-green-600 dark:text-green-400">{projectData.afterMetrics.traffic}</span>
                  </div>
                )}
                {projectData.afterMetrics.conversions && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Conversions:</span>
                    <span class="font-medium text-green-600 dark:text-green-400">{projectData.afterMetrics.conversions}</span>
                  </div>
                )}
                {projectData.afterMetrics.revenue && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Revenue:</span>
                    <span class="font-medium text-green-600 dark:text-green-400">{projectData.afterMetrics.revenue}</span>
                  </div>
                )}
                {projectData.afterMetrics.performance && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Performance:</span>
                    <span class="font-medium text-green-600 dark:text-green-400">{projectData.afterMetrics.performance}</span>
                  </div>
                )}
                {projectData.afterMetrics.other && (
                  <div class="flex justify-between">
                    <span class="text-gray-600 dark:text-gray-400">Other:</span>
                    <span class="font-medium text-green-600 dark:text-green-400">{projectData.afterMetrics.other}</span>
                  </div>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Before/After Images -->
  {(projectData.beforeImage || projectData.afterImage) && (
    <section class="bg-white dark:bg-gray-900">
