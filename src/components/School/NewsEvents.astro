// Format date function
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Get category color
function getCategoryColor(category) {
  const colors = {
    'Pendaftaran': '#3B82F6',
    'Kegiatan': '#10B981',
    'Prestasi': '#F59E0B',
    'Workshop': '#8B5CF6'
  };
  return colors[category] || '#64748B';
}
---

<section class="news-events-section">
  <div class="container mx-auto px-4 py-16">
    <div class="section-header text-center mb-16" data-aos="fade-up">
      <h2 class="section-title">{newsEventsData.title}</h2>
      <h3 class="section-subtitle">{newsEventsData.subtitle}</h3>
      <p class="section-description">{newsEventsData.description}</p>
    </div>
    
    <div class="content-container">
      <!-- News Section -->
      <div class="news-section" data-aos="fade-right">
        <div class="section-header-inline">
          <h3 class="section-title-inline">Berita Terbaru</h3>
          <a href="#all-news" class="view-all-link">Lihat Semua Berita ‚Üí</a>
        </div>
        
        <div class="news-grid">
          {newsEventsData.news.map((article, index) => (
            <article class="news-card" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="news-image">
                <img src={article.image} alt={article.title} />
                <div class="news-category" style={`background-color: ${getCategoryColor(article.category)}`}>
                  {article.category}
                </div>
              </div>
              <div class="news-content">
                <div class="news-meta">
                  <span class="news-date">{formatDate(article.date)}</span>
                  <span class="news-read-time">{article.readTime}</span>
                </div>
                <h4 class="news-title">{article.title}</h4>
                <p class="news-excerpt">{article.excerpt}</p>
                <div class="news-footer">
                  <span class="news-author">Oleh: {article.author}</span>
                  <a href={`#news-${index}`} class="read-more-btn">Baca Selengkapnya</a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
      
      <!-- Events Section -->
      <div class="events-section" data-aos="fade-left">
        <div class="section-header-inline">
          <h3 class="section-title-inline">Acara Mendatang</h3>
          <a href="#all-events" class="view-all-link">Lihat Semua Acara ‚Üí</a>
        </div>
        
        <div class="events-list">
          {newsEventsData.events.map((event, index) => (
            <div class="event-card" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="event-image">
                <img src={event.image} alt={event.title} />
                <div class="event-status {event.status}">
                  {event.status === 'upcoming' ? 'Mendatang' : 'Selesai'}
                </div>
              </div>
              <div class="event-content">
                <h4 class="event-title">{event.title}</h4>
                <p class="event-description">{event.description}</p>
                <div class="event-details">
                  <div class="event-detail">
                    <span class="detail-icon">üìÖ</span>
                    <span class="detail-text">{formatDate(event.date)}</span>
                  </div>
                  <div class="event-detail">
                    <span class="detail-icon">‚è∞</span>
                    <span class="detail-text">{event.time}</span>
                  </div>
                  <div class="event-detail">
                    <span class="detail-icon">üìç</span>
                    <span class="detail-text">{event.location}</span>
                  </div>
                </div>
                <button class="register-btn">Daftar Acara</button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Newsletter Subscription -->
    <div class="newsletter-section text-center mt-16" data-aos="fade-up">
      <div class="newsletter-content">
        <h3 class="newsletter-title">Berlangganan Newsletter</h3>
        <p class="newsletter-description">Dapatkan informasi terbaru tentang kegiatan sekolah langsung di email Anda.</p>
