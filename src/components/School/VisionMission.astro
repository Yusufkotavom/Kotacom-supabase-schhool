---
const visionMissionData = {
  title: "Visi & Misi",
  subtitle: "Membangun Masa Depan Cemerlang",
  vision: {
    title: "Visi",
    description: "Menjadi sekolah dasar unggulan yang menghasilkan siswa kreatif, berkarakter, dan siap menghadapi tantangan global dengan mengintegrasikan nilai-nilai Islam dan teknologi modern.",
    icon: "üéØ"
  },
  mission: {
    title: "Misi",
    items: [
      "Menyelenggarakan pendidikan berkualitas dengan kurikulum nasional yang diperkaya program pengembangan kreativitas",
      "Mengembangkan karakter siswa berdasarkan nilai-nilai Islam dan nasionalisme",
      "Menyediakan fasilitas pembelajaran modern yang mendukung pengembangan potensi siswa",
      "Mengoptimalkan peran guru dalam menciptakan lingkungan belajar yang inspiratif dan inovatif",
      "Membangun kerjasama dengan orang tua dan masyarakat dalam mendukung keberhasilan pendidikan siswa"
    ],
    icon: "üåü"
  },
  values: [
    {
      title: "Kreativitas",
      description: "Mendorong siswa untuk berpikir kreatif dan inovatif dalam menyelesaikan masalah",
      icon: "üé®"
    },
    {
      title: "Karakter",
      description: "Membentuk karakter siswa yang berakhlak mulia dan berintegritas tinggi",
      icon: "ü§ù"
    },
    {
      title: "Kualitas",
      description: "Memberikan pendidikan berkualitas tinggi dengan standar nasional dan internasional",
      icon: "‚≠ê"
    },
    {
      title: "Inovasi",
      description: "Menerapkan metode pembelajaran yang inovatif dan sesuai dengan perkembangan zaman",
      icon: "üí°"
    }
  ]
};
---

<section class="vision-mission-section">
  <div class="container mx-auto px-4 py-16">
    <div class="section-header text-center mb-16" data-aos="fade-up">
      <h2 class="section-title">{visionMissionData.title}</h2>
      <h3 class="section-subtitle">{visionMissionData.subtitle}</h3>
    </div>
    
    <div class="vision-mission-grid">
      <!-- Vision Card -->
      <div class="vision-card" data-aos="fade-right">
        <div class="card-header">
          <div class="card-icon">{visionMissionData.vision.icon}</div>
          <h3 class="card-title">{visionMissionData.vision.title}</h3>
        </div>
        <p class="card-description">{visionMissionData.vision.description}</p>
      </div>
      
      <!-- Mission Card -->
      <div class="mission-card" data-aos="fade-left">
        <div class="card-header">
          <div class="card-icon">{visionMissionData.mission.icon}</div>
          <h3 class="card-title">{visionMissionData.mission.title}</h3>
        </div>
        <ul class="mission-list">
          {visionMissionData.mission.items.map((item, index) => (
            <li class="mission-item" data-aos="fade-up" data-aos-delay={index * 100}>
              <span class="item-number">{index + 1}</span>
              <span class="item-text">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Values Section -->
    <div class="values-section mt-16">
      <h3 class="values-title text-center mb-12" data-aos="fade-up">Nilai-Nilai Kami</h3>
      <div class="values-grid">
        {visionMissionData.values.map((value, index) => (
          <div class="value-card" data-aos="zoom-in" data-aos-delay={index * 200}>
            <div class="value-icon">{value.icon}</div>
            <h4 class="value-title">{value.title}</h4>
            <p class="value-description">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .vision-mission-section {
    background: linear-gradient(135deg, #ffffff 0%, #f1f5f9 100%);
    position: relative;
    overflow: hidden;
  }
  
  .vision-mission-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23e2e8f0" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
    pointer-events: none;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(45deg, #3B82F6, #F59E0B);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }
  
  .section-subtitle {
    font-size: 1.5rem;
    color: #64748b;
    font-weight: 600;
  }
  
  /* Vision Mission Grid */
  .vision-mission-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }
  
  .vision-card,
  .mission-card {
    background: white;
    padding: 3rem;
    border-radius: 25px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .vision-card::before,
  .mission-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(45deg, #3B82F6, #F59E0B);
  }
  
  .vision-card:hover,
  .mission-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }
  
  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .card-icon {
    font-size: 3rem;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #3B82F6, #F59E0B);
    border-radius: 50%;
    color: white;
  }
  
  .card-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1e293b;
  }
  
  .card-description {
    font-size: 1.1rem;
    color: #64748b;
    line-height: 1.8;
  }
  
  /* Mission List */
  .mission-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .mission-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 15px;
    transition: all 0.3s ease;
  }
  
  .mission-item:hover {
    background: linear-gradient(135deg, #3B82F6, #F59E0B);
    color: white;
    transform: translateX(10px);
  }
  
  .item-number {
    width: 30px;
    height: 30px;
    background: linear-gradient(135deg, #3B82F6, #F59E0B);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }
  
  .mission-item:hover .item-number {
    background: white;
    color: #3B82F6;
  }
  
  .item-text {
    font-size: 1rem;
    line-height: 1.6;
    flex: 1;
  }
  
  /* Values Section */
  .values-section {
    position: relative;
  }
  
  .values-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 3rem;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .value-card {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .value-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(245, 158, 11, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .value-card:hover::before {
    opacity: 1;
  }
  
  .value-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }
  
  .value-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .value-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1rem;
  }
  
  .value-description {
    color: #64748b;
    line-height: 1.6;
  }
  
  @media (max-width: 1024px) {
    .vision-mission-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .vision-card,
    .mission-card {
      padding: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
    
    .section-subtitle {
      font-size: 1.3rem;
    }
    
    .card-title {
      font-size: 1.5rem;
    }
    
    .card-icon {
      width: 60px;
      height: 60px;
      font-size: 2rem;
    }
    
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .value-card {
      padding: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .values-grid {
      grid-template-columns: 1fr;
    }
    
    .mission-item {
      flex-direction: column;
      text-align: center;
    }
    
    .item-number {
      align-self: center;
    }
  }
</style>