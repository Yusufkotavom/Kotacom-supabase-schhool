          <div class={`absolute inset-0 bg-gradient-to-br {service.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>

          <div class="relative p-8">
            <div class="flex items-center justify-between mb-6">
              <div class={`flex items-center justify-center w-14 h-14 rounded-2xl {service.iconBg} group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                <span class="text-2xl">{service.icon}</span>
              </div>
              <div class={`px-3 py-1 rounded-full text-xs font-semibold bg-{service.color}-100 text-{service.color}-800 dark:bg-{service.color}-900/30 dark:text-{service.color}-300`}>
