      "meta": {
        "interface": "tags"
      }
    },
    {
      "field": "url",
      "type": "string",
      "meta": {
        "interface": "input"
      }
    },
    {
      "field": "external_url",
      "type": "string",
      "meta": {
        "interface": "input"
      }
    },
    {
      "field": "featured",
      "type": "boolean",
      "meta": {
        "interface": "boolean"
      },
      "schema": {
        "default_value": false
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "readonly": true
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
