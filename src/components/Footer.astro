---
import { Image } from "astro:assets";
import KotacomLogo from "../assets/kotacom-logo.svg";
import { COMPANY_NAME, COMPANY_WHATSAPP } from "../consts";
const today = new Date();
const companyName = COMPANY_NAME;
const whatsapp = COMPANY_WHATSAPP;

// Services structure
const services = [
  {
    title: "Website Development",
    url: "/services/website-software-development-terbaik",
    children: [
      { title: "Website Toko Online", url: "/pembuatan-website/jasa-pembuatan-website-toko-online" },
      { title: "Website Company Profile", url: "/pembuatan-website/jasa-pembuatan-website-company-profile" },
      { title: "Website Sekolah", url: "/pembuatan-website/jasa-pembuatan-website-sekolah" },
      { title: "Website Klinik/Dokter", url: "/pembuatan-website/jasa-pembuatan-website-dokter-klinik" },
      { title: "Website Konstruksi", url: "/pembuatan-website/jasa-pembuatan-website-konstruksi" },
      { title: "Website NGO/Komunitas", url: "/pembuatan-website/jasa-pembuatan-website-komunitas-ngo" },
    ]
  },
  {
    title: "Percetakan",
    url: "/percetakan",
    children: [
      { title: "Cetak Buku", url: "/percetakan/cetak-buku" },
      { title: "Cetak Brosur", url: "/percetakan/cetak-brosur" },
      { title: "Cetak Kartu Nama", url: "/percetakan/cetak-kartu-nama" },
      { title: "Cetak Banner/Spanduk", url: "/percetakan/cetak-banner-spanduk" },
      { title: "Cetak Stiker", url: "/percetakan/cetak-stiker" },
      { title: "Cetak Kalender", url: "/percetakan/cetak-kalender" },
      { title: "Cetak Kaos", url: "/percetakan/cetak-kaos" },
      { title: "Cetak Company Profile", url: "/percetakan/cetak-company-profile" },
      { title: "Cetak Undangan", url: "/percetakan/cetak-undangan" },
      { title: "Cetak Kemasan Produk", url: "/percetakan/cetak-kemasan-product" },
    ]
  },
  {
    title: "IT Support",
    url: "/services/it-support",
    children: [
      { title: "Service Komputer/Laptop", url: "/services/it-support" },
      { title: "Service Macbook", url: "/services/it-support" },
      { title: "Network Setup", url: "/services/network-setup" },
      { title: "System Administration", url: "/services/system-admin" },
      { title: "Digital Consultation", url: "/services/consultation" },
    ]
  },
  {
    title: "Software Development",
    url: "/software",
    children: [
      { title: "Pembuatan Software", url: "/software/pembuatan-software" },
      { title: "Implementasi Software", url: "/software/implementasi-software" },
      { title: "Instalasi Software", url: "/software/instalasi-software" },
    ]
  },
];
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700" role="contentinfo">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Services Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      {services.map((service) => (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">
            <a href={service.url} class="hover:text-blue-600 dark:hover:text-blue-400">
              {service.title}
            </a>
          </h3>
          <ul class="space-y-2">
            {service.children.map((child) => (
              <li>
                <a 
                  href={child.url} 
                  class="text-sm text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
                >
                  {child.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Main Footer Content -->
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <!-- Logo & Description -->
      <div class="flex flex-col gap-2">
        <a href="/" class="flex items-center gap-3 mb-2">
          <Image src={KotacomLogo} class="h-10 w-auto" alt={companyName} />
        </a>
        <p class="text-sm text-gray-600 dark:text-gray-400 max-w-md">
          Solusi IT & Digital Terpadu untuk Bisnis Anda
        </p>
      </div>

      <!-- Links & Social -->
      <div class="flex flex-col sm:flex-row gap-8 sm:items-center">
        <!-- Quick Links -->
        <nav class="flex flex-wrap gap-x-6 gap-y-2 text-sm">
          <a href="/services" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Layanan</a>
          <a href="/projects" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Portfolio</a>
          <a href="/posts" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Artikel</a>
          <a href="/contact" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Kontak</a>
          <a href="/privacy" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Privasi</a>
        </nav>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a
            href={`https://wa.me/${whatsapp}`}
            class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
            aria-label="WhatsApp"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </a>
          <a
            href="mailto:info@kotacom.id"
            class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
            aria-label="Email"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
          </a>
          <a
            href="https://linkedin.com/company/kotacom-id"
            class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M19 0H5a5 5 0 00-5 5v14a5 5 0 005 5h14a5 5 0 005-5V5a5 5 0 00-5-5zM8 19H5V8h3v11zM6.5 6.732c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zM20 19h-3v-5.604c0-3.368-4-3.113-4 0V19h-3V8h3v1.765c1.396-2.586 7-2.777 7 2.476V19z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
      <p class="text-center text-sm text-gray-500 dark:text-gray-400">
        &copy; {today.getFullYear()} {companyName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>