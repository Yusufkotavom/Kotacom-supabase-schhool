        Kami menyediakan berbagai paket percetakan dengan harga transparan dan kualitas terjamin. Mulai dari paket dasar hingga premium untuk kebutuhan bisnis Anda.
      </p>
    </ScrollReveal>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {pricingPackages.map((pkg, index) => (
        <ScrollReveal
          animation={index === 1 ? 'zoomIn' : index === 0 ? 'fadeInLeft' : 'fadeInRight'}
          delay={index * 200}
          className="h-full"
        >
          <div class={`bg-white dark:bg-gray-800 rounded-2xl shadow-lg border p-8 h-full flex flex-col relative overflow-hidden transition-all duration-300 hover:shadow-xl ${
            pkg.popular
              ? 'ring-2 ring-red-500 dark:ring-red-400 transform scale-105'
              : 'border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600'
          }`}>

            <!-- Popular Badge -->
            {pkg.popular && (
              <div class="absolute -top-3 -right-3 bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                BEST SELLER
              </div>
            )}

            <!-- Package Icon & Name -->
            <div class="text-center mb-6">
              <div class="text-4xl mb-3">{pkg.icon}</div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{pkg.name}</h3>
              <p class="text-gray-600 dark:text-gray-400">{pkg.description}</p>
            </div>

            <!-- Pricing -->
            <div class="text-center mb-6">
              <div class="flex items-center justify-center space-x-2 mb-2">
                <span class="text-4xl font-extrabold text-blue-600 dark:text-blue-400">{pkg.price}</span>
                {pkg.originalPrice && (
                  <span class="text-lg text-gray-500 line-through">{pkg.originalPrice}</span>
                )}
              </div>
              {pkg.discount && (
                <div class="inline-block bg-green-500 text-white text-sm font-semibold px-3 py-1 rounded-full mb-4">
                  Diskon {pkg.discount}
                </div>
              )}
              <p class="text-sm text-gray-500 dark:text-gray-400">per bulan / minimal 3 bulan</p>
            </div>

            <!-- Features -->
            <div class="flex-grow mb-6">
              <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Yang Didapat:</h4>
              <ul class="space-y-3">
                {pkg.features.included.map((feature) => (
                  <li class="flex items-start text-sm">
                    <svg class="w-4 h-4 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Recommended For -->
            <div class="mb-6">
              <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Cocok untuk:</h4>
              <div class="flex flex-wrap gap-2">
                {pkg.recommendedFor.map((target) => (
                  <span class="bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 text-xs px-3 py-1 rounded-full">
                    {target}
                  </span>
                ))}
              </div>
            </div>

            <!-- CTA Button -->
            <a
              href={pkg.ctaLink}
              class={`w-full font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg text-center ${
                pkg.popular
                  ? 'bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white'
                  : 'bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white'
              }`}
              target="_blank"
              rel="noopener"
            >
              {pkg.ctaText}
            </a>
          </div>
        </ScrollReveal>
      ))}
    </div>

    <!-- Additional Info -->
    <ScrollReveal animation="fadeInUp" delay={600} className="text-center">
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700">
