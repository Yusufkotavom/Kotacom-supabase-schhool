---
import { getCollection } from "astro:content";
import MainLayout from "../../../../layouts/MainLayout.astro";
import type { GetStaticPathsOptions } from "astro";
import ProjectCard from "../../../../components/ProjectCard.astro";
import PCountryDropdown from "../../../../components/PCountryDropdown.astro";
import PLocaleDropdown from "../../../../components/PLocaleDropdown.astro";
import { getProjectsDirectFromSupabase } from "../../../../lib/supabase-direct";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  // Fetch all projects from MDX and Supabase
  const mdxProjects = await getCollection("projectsMdx");
  const supabaseProjects = await getProjectsDirectFromSupabase(10000, 'published'); // Only published projects

  // Normalize MDX projects
  const normalizedMdxProjects = mdxProjects.map((entry) => ({
    ...entry,
    source: 'mdx',
    data: {
      ...entry.data,
      properties: {
        pTitle: entry.data.title,
        pCountry: entry.data.country,
        pSlug: entry.data.slug,
        pImageURL: entry.data.imageUrl || "",
        pPublished: { start: entry.data.published },
        pLocale: entry.data.locale,
        pCategory: entry.data.category,
        pOrganiser: entry.data.organiser,
        pCost: entry.data.cost,
        pURL: entry.data.url,
        pGYGURL: entry.data.gygUrl,
        pMapsURL: entry.data.mapsUrl,
        pVerify: entry.data.verify || "",
        pReview: entry.data.review,
        pGetInvolved: entry.data.getInvolved,
      },
    },
  }));

  // Normalize Supabase projects
  const normalizedSupabaseProjects = supabaseProjects
    .filter((project: any) => project.slug && typeof project.slug === 'string')
    .map((project: any) => ({
      source: 'supabase',
      data: { 
        properties: {
          pTitle: project.title,
          pCountry: project.country || [],
          pSlug: project.slug,
          pImageURL: project.imageUrl || '',
          pPublished: { start: project.published ? new Date(project.published) : new Date(0) },
          pLocale: project.locale || [],
          pCategory: project.category || [],
          pOrganiser: project.organiser,
          pCost: project.cost || [],
          pURL: project.url || '',
          pGYGURL: project.gygUrl || '',
          pMapsURL: project.mapsUrl || '',
          pVerify: project.verify || '',
          pReview: project.description || '',
          pGetInvolved: project.getInvolved || '',
        } 
      }
    }));

  // Merge all projects
  const allProjects = [...normalizedMdxProjects, ...normalizedSupabaseProjects];

  // Extract unique countries and locales from all projects
  const countryLocaleMap = new Map();

  allProjects.forEach((project) => {
    const pCountry = project.data.properties.pCountry;
    const pLocale = project.data.properties.pLocale;
    
    let countries: string[] = [];
    let locales: string[] = [];
    
    if (Array.isArray(pCountry)) {
      countries = pCountry;
    } else if (pCountry) {
      countries = [pCountry];
    }
    
    if (Array.isArray(pLocale)) {
      locales = pLocale;
    } else if (pLocale) {
      locales = [pLocale];
    }

    countries.forEach((country) => {
      const countrySlug = String(country).toLowerCase().replace(/\s+/g, "-");
      if (!countryLocaleMap.has(countrySlug)) {
        countryLocaleMap.set(countrySlug, new Set());
      }
      locales.forEach((locale) => {
        const localeSlug = String(locale).toLowerCase().replace(/\s+/g, "-");
        countryLocaleMap.get(countrySlug).add(localeSlug);
      });
    });
  });

  // Generate paginated paths for each country and locale
  const paths = [];

  for (const [country, locales] of countryLocaleMap.entries()) {
    for (const locale of locales) {
      const localeProjects = allProjects.filter((project) => {
        const pCountry = project.data.properties.pCountry;
        const pLocale = project.data.properties.pLocale;
        
        let projectCountries: string[] = [];
        let projectLocales: string[] = [];
        
        if (Array.isArray(pCountry)) {
          projectCountries = pCountry.map((c) =>
            String(c).toLowerCase().replace(/\s+/g, "-")
          );
        } else if (pCountry) {
          projectCountries = [String(pCountry).toLowerCase().replace(/\s+/g, "-")];
        }
        
        if (Array.isArray(pLocale)) {
          projectLocales = pLocale.map((l) =>
            String(l).toLowerCase().replace(/\s+/g, "-")
          );
        } else if (pLocale) {
          projectLocales = [String(pLocale).toLowerCase().replace(/\s+/g, "-")];
        }

        return (
          projectCountries.includes(country) &&
          projectLocales.includes(locale)
        );
      });

      const localePaginatedPaths = paginate(localeProjects, {
        pageSize: 9, // Number of projects per page
        params: { country, locale },
        props: { country, locale }, // Pass country and locale as props
      });

      paths.push(...localePaginatedPaths);
    }
  }

  return paths;
}

const { country, locale } = Astro.params; // Get the current country and locale from the URL
const { page } = Astro.props; // Get the paginated data

// Convert the country and locale slugs back to readable formats
const readableCountry = country
  .split("-")
  .map((word: string) => word.charAt(0).toUpperCase() + word.slice(1))
  .join(" ");

const readableLocale = locale
  .split("-")
  .map((word: string) => word.charAt(0).toUpperCase() + word.slice(1))
  .join(" ");
---

<MainLayout title={`Projects in ${readableLocale}, ${readableCountry} - Page ${page.currentPage} of ${page.lastPage}`}>
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="max-w-screen-md mb-8 lg:mb-16">
        <h1
          class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
        >
          Projects in {readableLocale}, {readableCountry}
        </h1>
        <p class="text-gray-500 sm:text-xl dark:text-gray-400">
          A list of projects located in {readableLocale}, {readableCountry}.
        </p>
      </div>
      
      <div class="flex flex-col md:flex-row mb-5">
        <!-- Div 1 (Showing projects) -->
        <div id="1" class="w-full md:w-1/2 p-2 order-3 md:order-1">
          <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
            Showing <span class="font-semibold text-gray-900 dark:text-white">
              {page.start + 1}-{page.end + 1}
            </span> of <span class="font-semibold text-gray-900 dark:text-white">
              {page.total}
            </span> projects
          </span>
        </div>
      
        <!-- Div 2 (Locale Dropdown) -->
        <div id="2" class="w-full md:w-1/4 p-2 order-1 md:order-2">
          <PCountryDropdown />
        </div>
      
        <!-- Div 3 (Country Dropdown) -->
        <div id="3" class="w-full md:w-1/4 p-2 order-2 md:order-3">
          <PLocaleDropdown />
        </div>
      </div>

      <div
        class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0"
      >
        {page.data.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>

  <!-- Pagination -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="flex justify-center items-center">
        <!-- Previous Button -->
        {page.url.prev ? (
          <a href={page.url.prev} class="flex items-center justify-center px-4 h-10 me-3 text-base font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Previous
          </a>
        ) : null}
        {page.url.next ? (
          <a href={page.url.next} class="flex items-center justify-center px-4 h-10 text-base font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Next
          </a>
        ) : null}
      </div>
    </div>
  </section>
</MainLayout>