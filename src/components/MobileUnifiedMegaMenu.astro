---
export interface MegaMenuSection {
  title: string;
  icon?: string;
  items: MegaMenuItem[];
}

export interface MegaMenuItem {
  title: string;
  url: string;
  description?: string;
  icon?: string;
  badge?: string;
  isExternal?: boolean;
}

export interface MobileUnifiedMegaMenuProps {
  trigger: string;
  sections: MegaMenuSection[];
  className?: string;
}

const { trigger, sections, className = '' } = Astro.props as MobileUnifiedMegaMenuProps;
const menuId = `mobile-unified-mega-menu-${trigger.toLowerCase().replace(/\s+/g, '-')}`;
---

<div class={`w-full ${className}`}>
  <!-- Mobile Menu Trigger -->
  <button
    type="button"
    class="flex items-center justify-between w-full px-4 py-3 text-left text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white font-medium transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 rounded-md border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800"
    aria-expanded="false"
    aria-haspopup="true"
    aria-controls={menuId}
    data-mobile-unified-mega-menu-trigger={menuId}
  >
    <span class="text-base font-medium">{trigger}</span>
    <svg 
      class="w-5 h-5 transition-transform duration-200 mobile-unified-mega-menu-chevron" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <!-- Mobile Menu Content - Simple Vertical Design with Scroll -->
  <div
    id={menuId}
    class="w-full bg-white dark:bg-gray-900 max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
    role="menu"
    aria-labelledby={`${menuId}-trigger`}
    data-mobile-unified-mega-menu-content={menuId}
  >
    <!-- Scrollable Menu Content -->
    <div class="max-h-96 overflow-y-auto px-4 py-4 space-y-4">
      {sections.map((section) => (
        <div class="space-y-3">
          <!-- Section Header with Icon -->
          <div class="flex items-center gap-3 pb-2 border-b border-gray-100 dark:border-gray-800">
            {section.icon && (
              <div class="text-blue-600 dark:text-blue-400 text-sm" set:html={section.icon}></div>
            )}
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white">
              {section.title}
            </h3>
          </div>
          
          <!-- Section Items - Simple Vertical List -->
          <div class="space-y-2">
            {section.items.map((item) => (
              <a
                href={item.url}
                class="group/item flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
                role="menuitem"
                {...(item.isExternal && {
                  target: "_blank",
                  rel: "noopener noreferrer"
                })}
              >
                <!-- Item Icon -->
                {item.icon && (
                  <div class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 transition-colors" set:html={item.icon}></div>
                )}
                
                <!-- Item Content -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 transition-colors">
                      {item.title}
                    </span>
                    {item.badge && (
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
                        {item.badge}
                      </span>
                    )}
                    {item.isExternal && (
                      <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    )}
                  </div>
                  {item.description && (
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400 line-clamp-2">
                      {item.description}
                    </p>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Mobile Footer Section -->
    <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-700">
      <div class="text-center">
        <a
          href="/contact"
          class="inline-flex items-center gap-2 w-full justify-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Konsultasi Gratis
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Handle mobile unified mega menu interactions with accordion behavior
    const mobileMegaMenus = document.querySelectorAll('[data-mobile-unified-mega-menu-trigger]');
    
    mobileMegaMenus.forEach(trigger => {
      const menuId = trigger.getAttribute('data-mobile-unified-mega-menu-trigger');
      const menuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${menuId}"]`) as HTMLElement;
      
      if (!menuContent) return;
      
      // Main menu toggle with accordion behavior
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const isOpen = trigger.getAttribute('aria-expanded') === 'true';
        
        if (isOpen) {
          // Close menu
          trigger.setAttribute('aria-expanded', 'false');
          menuContent.style.maxHeight = '0px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
        } else {
          // Close other mobile menus first (accordion behavior)
          mobileMegaMenus.forEach(otherTrigger => {
            if (otherTrigger !== trigger) {
              const otherMenuId = otherTrigger.getAttribute('data-mobile-unified-mega-menu-trigger');
              const otherMenuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${otherMenuId}"]`) as HTMLElement;
              
              otherTrigger.setAttribute('aria-expanded', 'false');
              if (otherMenuContent) otherMenuContent.style.maxHeight = '0px';
              otherTrigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
            }
          });
          
          // Open menu
          trigger.setAttribute('aria-expanded', 'true');
          menuContent.style.maxHeight = menuContent.scrollHeight + 'px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.add('rotate-180');
        }
      });
    });
    
    // Close mobile menus on outside click
    document.addEventListener('click', (e) => {
      const target = e.target as Element;
      if (!target.closest('[data-mobile-unified-mega-menu-trigger], [data-mobile-unified-mega-menu-content]')) {
        mobileMegaMenus.forEach(trigger => {
          const menuContent = document.querySelector(`[data-mobile-unified-mega-menu-content="${trigger.getAttribute('data-mobile-unified-mega-menu-trigger')}"]`) as HTMLElement;
          trigger.setAttribute('aria-expanded', 'false');
          if (menuContent) menuContent.style.maxHeight = '0px';
          trigger.querySelector('.mobile-unified-mega-menu-chevron')?.classList.remove('rotate-180');
        });
      }
    });
  });
</script>

<style>
  /* Mobile unified mega menu specific styles */
  [data-mobile-unified-mega-menu-content] {
    transition: max-height 0.3s ease-in-out;
  }
  
  /* Chevron animations */
  .mobile-unified-mega-menu-chevron {
    transition: transform 0.2s ease-in-out;
  }
  
  .mobile-unified-mega-menu-chevron.rotate-180 {
    transform: rotate(180deg);
  }
  
  /* Focus styles for accessibility */
  [data-mobile-unified-mega-menu-trigger]:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Smooth hover transitions */
  [data-mobile-unified-mega-menu-trigger] {
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  
  /* Line clamp utility for description text */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Custom scrollbar for mobile mega menu */
  .max-h-96::-webkit-scrollbar {
    width: 4px;
  }
  
  .max-h-96::-webkit-scrollbar-track {
    background: #f3f4f6;
    border-radius: 2px;
  }
  
  .max-h-96::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 2px;
  }
  
  .max-h-96::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }
  
  /* Dark mode scrollbar */
  .dark .max-h-96::-webkit-scrollbar-track {
    background: #1f2937;
  }
  
  .dark .max-h-96::-webkit-scrollbar-thumb {
    background: #4b5563;
  }
  
  .dark .max-h-96::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>